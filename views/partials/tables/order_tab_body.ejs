<div class="tab-pane fade" id="status_<%= status %>" role="tabpanel" aria-labelledby="status_<%= status %>-tab">
    <% if (status === '1') { %>
    <form id='form_lines_<%= status %>'>
        <button class='btn btn-success w-100 mb-2'>Action lines</button>
    <% } %>
        <table class="table table-sm table-hover w-100">
            <thead class="thead-dark">
                <th class="w-20" onclick="sortTable(0, 'tbl_orders_<%= status %>')">Date</th>
                <th class="w-<% if (status === '1') { %>2<% } else { %>3<% } %>5" onclick="sortTable(2, 'tbl_orders_<%= status %>')">Item</th>
                <th class="w-<% if (status === '1') { %>2<% } else { %>3<% } %>5" onclick="sortTable(3, 'tbl_orders_<%= status %>')">Size</th>
                <th class="w-10" onclick="sortTable(3, 'tbl_orders_<%= status %>')">Quantity</th>
                <% if (status === '1') { %><th class="w-20" >Action</th><% } %>
                <th><i class='fas fa-search'></i></th>
            </thead>
            <tbody id="tbl_orders_<%= status %>"></tbody>
        </table>
        <% if (status === '1') { %></form><% } %>
</div>