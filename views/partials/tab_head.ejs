<% if (!locals.permission || permissions[locals.permission]) { %>
    <li class="nav-item">
        <a
    class="nav-link<% if (locals._class) { %> <%= _class %><% } %>"
            id="<%= id %>-tab"
            data-toggle="tab"
            href="#<%= id %>"
            role="tab"
            aria-controls="<%= id %>"
            aria-selected="true"
        >
            <%= title %><% if (locals.count_id) { %> (<span id='<%= count_id %>'></span>)<% } %>
            <% if (locals.spinner) { %><%- include(`${partials}/spinner`, {id: spinner}) %><% } %>
        </a>
    </li>
<% } %>