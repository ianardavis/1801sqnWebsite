<button
    class='btn<% if (locals.small) { %> btn-sm<% } %> btn-<%- colour %> mb-1 w-100'
    <% if (locals.type_att) { %>type='button'<% } %>
    <% if (locals.id)       { %>id='btn_<%= id %>'<% } %>
    <% if (locals.form)     { %>form='form_<%= form %>'<% } %>
    <% if (locals.disabled) { %>disabled<% } %>
    <% if (locals.tip)      { %>
        data-bs-toggle='tooltip'
        title='<%= tip %>'
    <% } %>
>
    <%= text %>
</button>