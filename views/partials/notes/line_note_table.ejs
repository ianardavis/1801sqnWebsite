<div class="tab-pane fade" id="<%= line %>-notes" role="tabpanel" aria-labelledby="<%= line %>-notes-tab">
    <%- include(`${partials}/inputs/select`, {id: `${line}_sel_system`, title: 'System Notes', options: [{text: 'Include', value: ''}, {text: 'Exclude', value: '_system=0', selected: true}, {text: 'Only', value: '_system=1'}]}) %>
    <table class="table table-sm table-hover">
        <thead class="thead-dark">
            <th class="w-20" onclick="sortTable(0, 'tbl_<%= line %>_notes')">Date</th>
            <th class="w-10" onclick="sortTable(1, 'tbl_<%= line %>_notes')">Sys</th>
            <th class="w-40" onclick="sortTable(2, 'tbl_<%= line %>_notes')">Note</th>
            <th class="w-30" onclick="sortTable(3, 'tbl_<%= line %>_notes')">User</th>
            <th><i class="fas fa-pencil-alt"></i></th>
            <th><i class="fas fa-trash-alt"></i></th>
        </thead>
        <tbody id="tbl_<%= line %>_notes"></tbody>
    </table>
</div>