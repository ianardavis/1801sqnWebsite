<h4>Notes:</h4>
<div class="row px-3">
    <label class="col-5 col-form-label" for="sn">System Notes:</label>
    <select class='form-control form-control-sm col-7' id="sn" type="text" onchange=filterSelects()>
        <option value="1" <% if (query.sn === 1) { %> selected <% } %>>Include</option>
        <option value="2" <% if (query.sn === 2) { %> selected <% } %>>Exclude</option>
        <option value="3" <% if (query.sn === 3) { %> selected <% } %>>Only</option>
    </select>
</div>
<div>
    <table id="notesTable" class="table table-sm table-hover smallFont07 limit-height-200" style="width:100%">
        <thead class="thead-dark">
            <th onclick="sortTable(0, 'notesTable')" style="width:25%">Date</th>
            <th onclick="sortTable(1, 'notesTable')" style="width:10%">System</th>
            <th onclick="sortTable(2, 'notesTable')" style="width:65%">Note</th>
            <% if (permissions.notes_delete === 1) { %>
                <th></th>
            <% } %>
        </thead>
        <tbody>
            <% if (notes) { %>
                <% notes.forEach((note) => { %>
                    <tr>
                        <td data-sort="<%= note._date.getTime() %>"><a href="/stores/notes/<%= note.note_id %>"><%= note._date.toDateString() %></a></td>
                        <td><input class="form-control form-control-sm" type="checkbox"<% if (note._system) { %> checked <% } %> disabled></td>
                        <td><a href="/stores/notes/<%= note.note_id %>"><%= note._note %></a></td>
                        <% if (permissions.notes_delete === 1) { %>
                            <td><form action="/stores/notes/<%= note.note_id %>?_method=DELETE" method="POST" onsubmit="return confirm('Confirm delete note?');"><button><i class="fas fa-trash-alt"></i></button></form></td>
                        <% } %>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</div>