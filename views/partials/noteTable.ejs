<a class="my-3" data-toggle="collapse" href="#collapseNote" role="button" aria-expanded="false" aria-controls="collapseNote">
    <h4>Notes (<%= notes.length %>)</h4>
</a>
<div class="collapse mb-3" id="collapseNote">
    <div class="row px-3">
        <label class="col-5 col-form-label" for="system">System Notes:</label>
        <select class='form-control form-control-sm col-7' id="system" type="text" onchange=filterSelects()>
            <option value="1" <% if (query.system === 1) { %> selected <% } %>>Include</option>
            <option value="2" <% if (query.system === 2) { %> selected <% } %>>Exclude</option>
            <option value="3" <% if (query.system === 3) { %> selected <% } %>>Only</option>
        </select>
    </div>
    <div>
        <table class="table table-sm table-hover">
            <thead class="thead-dark">
                <th class="w-25" onclick="sortTable(0, 'notesTable')">Date</th>
                <th class="w-10" onclick="sortTable(1, 'notesTable')">System</th>
                <th class="w-65" onclick="sortTable(2, 'notesTable')">Note</th>
                <th><i class="fas fa-search"></i></th>
                <% if (permissions.notes_delete === 1) { %><th><i class='fas fa-trash-alt'></i></th><% } %>
            </thead>
            <tbody id="notesTable">
                <% if (notes) { %>
                    <% notes.forEach(note => { %>
                        <tr>
                            <td data-sort="<%= note._date.getTime() %>">
                                <%= note._date.toDateString() %>
                            </td>
                            <td>
                                <input class="form-control form-control-sm" type="checkbox"<% if (note._system) { %> checked <% } %> disabled>
                            </td>
                            <td>
                               <%= note._note %>
                            </td>
                            <td>
                                <a class='btn btn-sm btn-primary' href="/stores/notes/<%= note.note_id %>">
                                    <i class="fas fa-search"></i>
                                </a>
                            </td>
                            <% if (permissions.notes_delete === 1) { %>
                                <td>
                                    <form action="/stores/notes/<%= note.note_id %>?_method=DELETE" method="POST" onsubmit="return confirm('Confirm delete note?');">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>