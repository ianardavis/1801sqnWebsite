<div <% if (locals.inp_id) { %>id='<%= inp_id %>' <% } %>class="input-group mb-1<% if (locals.inp_classes) inp_classes.forEach(e => { %> <%= e %><% }) %>">
    <div class="input-group-prepend w-<%= locals.prepend_size || 30 %>">
        <span class="input-group-text w-100"><%= title %></span>
    </div>
    <% if (locals.html) { %>
        <%- html %>
    <% } else { %>
        <p
    class="form-control<% if (locals.classes) { locals.classes.forEach(e => {%> <%= e %><% })%><% } %>"
            <% if (locals.id) { %>id='<%= id %>'<% } %>
        >
            <% if (locals.text) { %><%= text %><% } %>
        </p>
    <% } %>
    <% if (locals.link) { %>
        <div class="input-group-append">
            <a class='btn btn-primary' id='<%= id %>_link'>
                <i class="fas fa-search"></i>
            </a>
        </div>
    <% } %>
    <% if (locals.button) { %>
        <div class="input-group-append">
            <button
                class='btn btn-primary'
                <% if (locals.id) { %>
                    id='<%= id %>_link'
                <% } %>
                <% if (locals.modal) { %>
                    data-toggle="modal"
                    data-target="#mdl_<%= modal %>"
                <% } %>
            >
                <i class="fas fa-search"></i>
            </button>
        </div>
    <% } %>
    <% if (locals.append) { %>
        <%- include('append', {append: locals.append}) %>
    <% } %>
</div>