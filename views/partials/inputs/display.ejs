<div class="input-group mb-1">
    <div class="input-group-prepend w-<%= locals.size || 30 %>">
        <span class="input-group-text w-100"><%= title %></span>
    </div>
    <p
        class="form-control"
        <% if (locals.id) { %>id='<%= id %>'<% } %>
    >
        <% if (locals.text) { %><%= text %><% } %>
    </p>
    <% if (locals.append) { %>
        <%- include('append', {append: locals.append}) %>
    <% } %>
</div>