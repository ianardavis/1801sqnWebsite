<div class="input-group mb-1">
    <div class="input-group-prepend w-<%= locals.size || 30 %>">
        <span class="input-group-text w-100"><%= title %></span>
    </div>
    <input
        class="form-control"
        <% if (locals.id) { %>id='<%= id %>'<% } %>
        name=<%= name %>
        type="text"
        <% if (locals.value) { %>      value='<%= value %>'<% } %>
        <% if (locals.maxLength) { %>  maxlength='<%= maxLength %>'<% } %>
        <% if (locals.placeholder) { %>placeholder='<%= placeholder %>'<% } %>
        <% if (locals.required) { %>   required<% } %>
        <% if (locals.readonly) { %>   readonly<% } %>
        <% if (locals.inputmode) { %>  inputMode='<%= inputmode %>'<% } %>
    >
</div>