<div class="input-group mb-1">
    <div class="input-group-prepend w-30">
        <label
            class="input-group-text w-100"
            <% if (locals.id) { %> for="<%= id %>"<% } %>
        >
            <%= title %>
        </label>
    </div>
    <select
        class="custom-select"
        <% if (locals.id) { %>id='<%= id %>'<% } %>
        <% if (locals.name) { %> name='<%= name %>'<% } %>
    >
        <option value='0'<% if (locals.selected === 0) { %> selected<% } %>>No</option>
        <option value='1'<% if (locals.selected === 1) { %> selected<% } %>>Yes</option>
    </select>
</div>