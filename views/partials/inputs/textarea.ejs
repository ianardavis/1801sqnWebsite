<div class="input-group mb-1">
    <div class="input-group-prepend w-30">
        <label
            class="input-group-text w-100"
            <% if (locals.id) { %>for="<%= id %>"<% } %>
        >
            <%= title %>
        </label>
    </div>
    <textarea
        class='form-control'
        <% if (locals.id) { %>          id='<%= id %>'<% } %>
        <% if (locals.name) { %>        name='<%= name %>'<% } %>
        <% if (locals.rows) { %>        rows='<%= rows %>'<% } %>
        <% if (locals.maxlength) { %>   maxlength='<%= maxlength %>'<% } %>
        <% if (locals.readonly){ %>     readonly<% } %>
        <% if (locals.autocomplete) { %>autocomplete='<%= autocomplete %>'<% } %>
        <% if (locals.required) { %>    required<% } %>
    ><% if (locals.value) { %><%=  value %><% } %></textarea>
</div>