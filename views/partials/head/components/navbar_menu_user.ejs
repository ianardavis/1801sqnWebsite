<ul class="navbar-nav ms-auto">
    <% if (!user) { %>
        <li class="nav-item">
            <a class="nav-link" id='login_link' href="/login"><strong>Login</strong></a>
        </li>
        <script>
            set_href({id: 'login_link', value: `/login?redirect=${window.location.pathname}`})
        </script>
    <% } else { %>
        <li class="nav-item dropleft">
            <a class="nav-link dropdown-toggle" href="#" id="dd_notification" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%- include(`${partials}/spinner`, {id: 'notifications', float_start: true}) %>
                <i class='fas fa-bell'></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dd_notification" id='ul_notifications'></ul>
        </li>
        <script src="/js/common/notifications/show.js"></script>
        <script async>window.addEventListener('load', getNotifications)</script>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= user.rank.rank %> <%= user.full_name %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/users/<%= user.user_id %>">Profile</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/logout">Logout</a>
            </div>
        </li>
    <% } %>  
</ul>