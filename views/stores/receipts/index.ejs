<% include ../../partials/head/full %>
<section class="mb-2">
	<nav class="navbar navbar-expand navbar-light bg-nav">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores">Stores</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/receipts">Receipts</a>
			</li>
		</ul>
	</nav>
</section>
<section>
	<div class="container">
		<div class="input-group mb-2">
			<div class="input-group-prepend w-20">
				<label class="input-group-text w-100" for="sel_supplier">Suppliers</label>
			</div>
			<select class="custom-select" id='sel_supplier' onchange=getReceipts()>
				<option value='-1' selected>All</option>
				<% suppliers.forEach(supplier => { %>
					<option value='<%= supplier.supplier_id %>'>
						<%= supplier._name %>
					</option>
				<% }); %>
			</select>
		</div>
		<div class="input-group mb-2">
			<div class="input-group-prepend w-20">
				<label class="input-group-text w-100" for="sel_complete">Completed Receipts</label>
			</div>
			<select class="custom-select" id='sel_complete' onchange=getReceipts()>
				<option value='1' selected>Include</option>
				<option value='2'>Exclude</option>
				<option value='3'>Only</option>
			</select>
		</div>
		<div id='spn_receipts' class="spinner-border text-primary" role="status">
			<span class="sr-only">Loading...</span>
		</div>
		<table class="table table-sm table-hover">
			<thead class="thead-dark">
				<th class="w-25" onclick="sortTable(0, 'receiptTable')">Supplier</th>
				<th class="w-25" onclick="sortTable(1, 'receiptTable')">Receipt Date</th>
				<th class="w-10" onclick="sortTable(2, 'receiptTable')">Lines</th>
				<th class="w-10" onclick="sortTable(3, 'receiptTable')">Complete</th>
				<th class="w-30" onclick="sortTable(4, 'receiptTable')">Received By</th>
				<th><i class='fas fa-search'></i></th>
			</thead>
			<tbody id="receiptTable">
			</tbody>
		</table>
	</div>
</section>
<% include ../../partials/foot/full %>
<script src="/js/specific/receipts_index.js"></script>
<script async>getReceipts()</script>
<% include ../../partials/foot/htmlClose %>