<% include ../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/suppliers">Supplier</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/suppliers/<%= supplier.supplier_id %>"><%= supplier._name %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/receipts/new">New Receipt</a>
            </li>
        </ul>
    </nav>
</section>
<section>
	<div class="container">
		<h4>Receive Stock From <%= supplier._name %></h4>
		<form id="receiptForm" action="/stores/receipts" method="POST" onsubmit="return confirm('Add receipt?');">
			<input type="hidden" name="supplier_id" value="<%= supplier.supplier_id %>">
			<div class="row mx-auto">
				<div class="col-12 col-md-6 bordered mx-auto mb-3">
					<h5>Selected Items</h5>
					<p class="btn btn-primary mb-3 w-100" onclick=openAddWindow()>Add Item</p>
					<div id="selectedItems">
					</div>
					<div>
						<input class="btn btn-primary mt-3" type="submit" value="Receive Selected Items">
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
<% include ../../partials/foot/full %>
<script src="/js/newReceipt.js"></script>
<script>
	function openAddWindow() {
    if (addWindow == null || addWindow.closed) {
        addWindow = window.open("/stores/itemSearch?c=receipt&s=<%= supplier.supplier_id %>",
                                "itemSearch",
                                "width=600,height=840,resizeable=no,location=no");
    } else {
        addWindow.focus();
    };
};
</script>
<% include ../../partials/foot/htmlClose %>