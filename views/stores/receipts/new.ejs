<% include ../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/suppliers">Supplier</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/suppliers/<%= supplier.supplier_id %>"><%= supplier._name %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/receipts/new">New Receipt</a>
            </li>
        </ul>
    </nav>
</section>
<section>
	<div class="container">
		<h4>Receive Stock From <%= supplier._name %></h4>
		<form id="receiptForm" action="/stores/receipts" method="POST">
			<input type="hidden" name="supplier_id" value="<%= supplier.supplier_id %>">
            <div>
                <input class="btn btn-success mb-2 confirm" type="submit" value="Receive Selected Items">
            </div>
			<div class="row mx-auto">
				<div class="col-12 bordered">
                    <a class='float-left btn btn-success' href='javascript:openAddItem("receipt&s=<%= supplier.supplier_id %>")'>
                        <i class='fas fa-plus'></i>
                    </a>
					<h5>Selected Items</h5>
                    <div id="selectedItems" class=' menu row'>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
<% include ../../partials/foot/full %>
<script src="/js/removeID.js"></script>
<script src='/js/newItemCard.js'></script>
<script>
	<% if (typeof(items) !== 'undefined' && items.length > 0) { %>
		<% items.forEach(item => { %>
			addSize(<%- JSON.stringify(item) %>)
		<% }); %>
	<% }; %>
</script>
<% include ../../partials/foot/htmlClose %>