<%- include(`${process.env.PARTIALS}/head/full`) %>
<section class='mb-2'>
	<nav class='navbar navbar-expand navbar-light bg-nav'>
		<ul class='navbar-nav mr-auto'>
            <%- include(`${process.env.PARTIALS}/breadcrumb`, {href: '/stores',		    text: 'Stores'}) %>
			<%- include(`${process.env.PARTIALS}/breadcrumb`, {href: '/stores/demands', text: 'Demands'}) %>
			<%- include(`${process.env.PARTIALS}/breadcrumb`) %>
		</ul>
	</nav>
</section>
<section class='container'>
	<ul class="nav nav-tabs" id="mainTab" role="tablist">
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="optionsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				Menu
			</a>
			<div class="dropdown-menu" aria-labelledby="optionsDropdown">
				<%- include(`${process.env.PARTIALS}/notes/menu_add`) %>
				<form id="form_download">
					<input id='btn_download' class='dropdown-item dropdown_button' name='_status' type="submit" value='Download' disabled>
				</form>
				<% if (permissions.demand_edit) { %><form id='form_complete'><% } %>
					<input type="hidden" name='_status' value='2'>
					<input id='btn_complete' class='dropdown-item dropdown_button confirm' type="submit" value='Complete' disabled>
				<% if (permissions.demand_edit) { %></form><% } %>
				<div id='form_addSize'>
					<button type='button' class='dropdown-item dropdown_button' id='btn_addSize' data-toggle='modal' data-target='#mdl_add_size' disabled >
						Add Item
					</button>
				</div>
				<% if (permissions.demand_delete) { %><form id='form_delete'><% } %>
					<input id='btn_delete' type="submit" class="dropdown-item dropdown_button confirm" value='Cancel' disabled>
				<% if (permissions.demand_edit) { %></form><% } %>
				<input id='btn_action' form='form_action' class='dropdown-item dropdown_button confirm' type="submit" value='Action Lines' disabled>
			</div>
		</li>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'details', title: 'Details'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'lines',   title: 'Lines', count_id: 'line_count'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'notes',   title: 'Notes', count_id: 'note_count', permission: 'access_notes'}) %>
        <%- include(`${process.env.PARTIALS}/reload`) %>
    </ul>
    <div class="tab-content pt-3" id="myTabContent">
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
			<%- include(`${process.env.PARTIALS}/inputs/display`, {id: 'supplier',  title: 'Supplier',  append: {a: {id: 'supplier_link',  type: 'primary', text: '<i class="fas fa-search"></i>'}}}) %>
			<%- include(`${process.env.PARTIALS}/inputs/display`, {id: 'user',		title: 'Raised By', append: {a: {id: 'user_link', type: 'primary', text: '<i class="fas fa-search"></i>'}}}) %>
			<%- include(`${process.env.PARTIALS}/inputs/display`, {id: 'createdAt', title: 'Date'}) %>
			<%- include(`${process.env.PARTIALS}/inputs/display`, {id: 'updatedAt', title: 'Last Updated'}) %>
			<%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_status',   title: 'Status'}) %>
			<%- include(`${process.env.PARTIALS}/inputs/display`, {id: 'file',   	title: 'Filename'}) %>
		</div>
        <div class="tab-pane fade" id="lines" role="tabpanel" aria-labelledby="lines-tab">
			<%- include(`${process.env.PARTIALS}/inputs/select`, {title: 'Status', id: 'sel_status', options: [{value: '', text: 'All', selected: true}, {value: '_status=0', text: 'Cancelled'}, {value: '_status=1', text: 'Pending'}, {value: '_status=2', text: 'Open'}, {value: '_status=3', text: 'Received'}]}) %>
			<%- include(`${process.env.PARTIALS}/spinner`, {id: 'demands'}) %>
			<% if (permissions.demand_line_edit) { %>
				<form id='form_action'>
			<% } %>
			<table class='table table-sm table-hover'>
				<thead class='thead-dark'>
					<th class='w-10' onclick='sortTable(0, "linesTable")'><%- include(`${process.env.PARTIALS}/spinner`, {id: 'demand_lines', spinner_sm: true, spinner_float_left: true}) %>Line ID</th>
					<th class='w-30' onclick="sortTable(1,'linesTable')">Item</th>
					<th class='w-15' onclick="sortTable(2,'linesTable')">Size</th>
					<th class='w-5'  onclick="sortTable(3,'linesTable')">Qty</th>
					<th class='w-20' onclick="sortTable(4,'linesTable')">Status</th>
					<th class='w-20' onclick="sortTable(5,'linesTable')">Action</th>
					<th id='col_view'><i class='fas fa-search'></i></th>
				</thead>
				<tbody id='linesTable'>
				</tbody>
			</table>
			<% if (permissions.demand_line_edit) { %>
			</form>
			<% } %>
		</div>
        <%- include(`${process.env.PARTIALS}/notes/tab_body`) %>
    </div>
	<div id="div_modals"></div>
</section>
<%- include(`${process.env.PARTIALS}/foot/full`) %>
<script src='/js/tabs.js'></script>
<script src="/js/demands/show/demand.js"></script>
<script src="/js/demands/show/lines.js"></script>
<script src="/js/stock/list.js"></script>
<script src="/js/serials/list.js"></script>
<script src="/js/search/select.js"></script>
<script src="/js/addSize.js"></script>
<script src="/js/data/addFormListener.js"></script>
<script src='/js/utils/select_sel_status.js'></script>
<script src='/js/utils/getLineNotes.js'></script>
<script>showTab('<%= tab %>');</script>
<script>
	function getDemand() {
		get(
			showDemand,
			{
				table: 'demands',
				query: [`demand_id=${path[3]}`],
				permissions: {
					edit: 	     <%= permissions.demand_edit  	    || false %>,
					delete:		 <%= permissions.demand_delete	    || false %>,
					line_add:	 <%= permissions.demand_line_add	|| false %>,
					line_delete: <%= permissions.demand_line_delete || false %>
				}
			}
		);
	};
    document.querySelector('#reload').addEventListener('click', () => getDemand());
</script>
<script async>getDemand()</script>
<script>
    function getLines() {
		get(
			showLines,
			{
				table: 'demand_lines',
				query: [`demand_id=${path[3]}`, sel_status.value],
				permissions: {
					line_edit:   <%= permissions.demand_line_edit   || false %>,
					line_delete: <%= permissions.demand_line_delete || false %>
				}
			}
		);
	};
	// getdemandlines = getLines;
    document.querySelector('#reload').addEventListener('click', () => getLines());
    document.querySelector('#sel_status').addEventListener('change', () => getLines());
</script>
<script async>getLines()</script>
<script>
    window.addEventListener( "load", function () {
		<% if (permissions.demand_delete) { %>
			addFormListener('form_delete', 'DELETE', `/stores/demands/${path[3]}`,{onComplete: [getDemand, getLines]});
		<% } %>
		<% if (permissions.demand_edit) { %>
			addFormListener('form_complete', 'PUT', `/stores/demands/${path[3]}`, {onComplete: [getDemand, getLines]});
		<% } %>
		<% if (permissions.demand_line_edit) { %>
			addFormListener('form_action', 'PUT', `/stores/demnd_lines/${path[3]}`,{onComplete: getLines});
		<% } %>
	});
</script>
<%- include(`${process.env.PARTIALS}/foot/htmlClose`) %>