<!-- demands INDEX PAGE -->
<% include ../../partials/head/full %>
<section class="mb-2">
	<nav class="navbar navbar-expand navbar-light bg-nav">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores">Stores</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/demands">Demands</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/demands/<%= demands.demand_id %>"><%= demands.demand_id %></a>
			</li>
		</ul>
	</nav>
</section>
<section>
	<nav class="navbar navbar-expand navbar-dark bg-dark stores">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Options
				</a>
				<div class="dropdown-menu" aria-labelledby="navbarDropdown">
					<% if (permissions.notes_add) { %>
						<a class="dropdown-item" href="/stores/notes/new?table=demands&id=<%= demands.demand_id %>">Add Note</a>
						<div class="dropdown-divider"></div>
					<% } %>
					<a class="dropdown-item" href="/stores/demands">Back to Demands</a>
				</div>
				<% if (permissions.demands_delete) { %>
					<div class="col-12 mb-3">
						<form action="/stores/demands/<%= demands.demand_id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger">Delete Demand</button>
						</form>
					</div>
				<% } %>
			</li>
		</ul>
	</nav>
</section>
<section class="detailBox container-fluid pt-3">
	<div class="row">
		<div class="col-12 col-lg-6 col-xl-4 mb-3">
			<div class="bordered" id="divUsers">
				<h4>Demand Details</h4>
				<div class="details">
					<div class="row">
						<div class="col-sm-4">
							<label class="col-form-label">Supplier:</label>
						</div>
						<div class="col-sm-8">
							<input class="form-control" type="text" value="<%= demand.supplier._name %>" readonly>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-4">
							<label class="col-form-label">Raised By:</label>
						</div>
						<div class="col-sm-8">
								<input class="form-control" type="text" value="<%= demand.user.rank._rank %> <%= demand.user._name %>, <%= demand.user._ini %>" readonly>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-4">
							<label class="col-form-label">Raised:</label>
						</div>
						<div class="col-sm-8">
							<input class="form-control" type="text" value="<%= demand._date.toDateString() %>" readonly>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-12 col-lg-6 col-xl-12 mb-3">
			<div>
				<div class="row">
					<label class="col-3 col-form-label text-right" for="rl">Received Lines:</label>
					<select id="rl" class='form-control col-9' type="text" onchange=filterSelects()>
						<option value="1" <% if (query.rl === 1) { %>selected<% } %> >Include</option>
						<option value="2" <% if (query.rl === 2) { %>selected<% } %> >Exclude</option>
						<option value="3" <% if (query.rl === 3) { %>selected<% } %> >Only</option>
					</select>
				</div>
			</div>
			<table id="demandTable" class="table table-sm table-hover mx-auto w-100">
				<thead class="thead-dark">
					<th class="w-20" onclick="sortTable(0, 'demandTable')">Item</th>
					<th class="w-10" onclick="sortTable(1, 'demandTable')">Size</th>
					<th class="w-5" onclick="sortTable(2, 'demandTable')">Quantity</th>
					<th class="w-10" onclick="sortTable(3, 'demandTable')">Receipt Date</th>
				</thead>
				<tbody>
					<% if (demand.lines) { %>
						<% demand.lines.forEach((line) => { %>
							<tr>
								<td><a href="/stores/demands/<%= demand.demand_id %>"> <%= line.size.item._description %></a></td>
								<td><a href="/stores/demands/<%= demand.demand_id %>"> <%= line.size.size._text %></a></td>
								<td><a href="/stores/demands/<%= demand.demand_id %>"> <%= line._qty %></a></td>
								<td><a href="/stores/demands/<%= demand.demand_id %>"> <% if (line.receipt) { %><%= line.receipt._date.toDateString() %><% } %></a></td>
							</tr>
						<% }) %>
					<% } %>
				</tbody>
			</table>
		</div>
		<% if (permissions.access_notes) { %> 
			<div class="col-12 col-lg-6 col-xl-12 mb-3 bordered">
				<% include ../../partials/noteTable %>
			</div>
		<% } %>
	</div>
</section>
<% include ../../partials/foot/full %>
<script src="/js/filters.js"></script>
<script>
    function filterSelects() {
        filter(['rl'], "/stores/demands/<%= demand.demand_id %>");
    };
</script>
<% include ../../partials/foot/htmlClose %>