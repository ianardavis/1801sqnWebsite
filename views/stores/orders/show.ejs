<% include ../../partials/head/full %>
<section class="mb-2">
	<nav class="navbar navbar-expand navbar-light bg-nav">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores">Stores</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/orders">Orders</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/orders/<%= order.order_id %>"><%= order.order_id %></a>
			</li>
		</ul>
	</nav>
</section>
<section>
	<nav class="navbar navbar-expand navbar-dark bg-dark stores">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Options
				</a>
				<div class="dropdown-menu" aria-labelledby="navbarDropdown">
					<% if (permissions.notes_add) { %>
						<a class="dropdown-item" href="/stores/notes/new?table=orders&id=<%= order.order_id %>">Add Note</a>
						<div class="dropdown-divider"></div>
					<% } %>
					<% if (permissions.orders_delete) { %>
						<form action="/stores/orders/<%= order.order_id %>?_method=DELETE&user=<%= order.ordered_for %>" method="POST">
							<button class="dropdown-item dropdown_button">Delete Order</button>
						</form>
					<% } %>
					<a class="dropdown-item" href="/stores/orders">Back to Orders</a>
				</div>
			</li>
		</ul>
	</nav>
</section>
<section class="container pt-3">
	<div class="row">
		<div class="col-12 col-xl-4 mb-3 bordered">
			<h4>User Details</h4>
			<div class="row">
				<div class="col-sm-4">
					<label class="col-form-label">Ordered For:</label>
				</div>
				<div class="col-sm-8">
					<input class="form-control" type="text" value="<%= order.orderedFor.rank._rank %> <%= order.orderedFor._name %>, <%= order.orderedFor._ini %>" readonly>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">
					<label class="col-form-label">Ordered By:</label>
				</div>
				<div class="col-sm-8">
						<input class="form-control" type="text" value="<%= order.orderedBy.rank._rank %> <%= order.orderedBy._name %>, <%= order.orderedBy._ini %>" readonly>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">
					<label class="col-form-label">Ordered:</label>
				</div>
				<div class="col-sm-8">
					<input class="form-control" type="text" value="<%= order._date.toDateString() %>" readonly>
				</div>
			</div>
		</div>
		<div class="col-12 col-xl-8 mb-3 bordered">
			<div class="container">
				<!-- <div class="row">
					<label class="col-3 col-form-label text-right" for="ul">Undemanded Lines:</label>
					<select id="ul" class='form-control form-control-sm col-9' type="text" onchange=filterSelects()>
						<option value="1" <% if (query.ul === 1) { %>selected<% } %> >Include</option>
						<option value="2" <% if (query.ul === 2) { %>selected<% } %> >Exclude</option>
						<option value="3" <% if (query.ul === 3) { %>selected<% } %> >Only</option>
					</select>
				</div> -->
				<div class="row">
					<label class="col-3 col-form-label text-right" for="dl">Demanded Lines:</label>
					<select id="dl" class='form-control form-control-sm col-9' type="text" onchange=filterSelects()>
						<option value="1" <% if (query.dl === 1) { %>selected<% } %> >Include</option>
						<option value="2" <% if (query.dl === 2) { %>selected<% } %> >Exclude</option>
						<option value="3" <% if (query.dl === 3) { %>selected<% } %> >Only</option>
					</select>
				</div>
				<div class="row">
					<label class="col-3 col-form-label text-right"  for="rl">Received Lines:</label>
					<select id="rl" class='form-control form-control-sm col-9' type="text" onchange=filterSelects()>
						<option value="1" <% if (query.rl === 1) { %>selected<% } %> >Include</option>
						<option value="2" <% if (query.rl === 2) { %>selected<% } %> >Exclude</option>
						<option value="3" <% if (query.rl === 3) { %>selected<% } %> >Only</option>
					</select>
				</div>
				<div class="row">
					<label class="col-3 col-form-label text-right"  for="il">Issued Lines:</label>
					<select id="il" class='form-control form-control-sm col-9' type="text" onchange=filterSelects()>
						<option value="1" <% if (query.il === 1) { %>selected<% } %> >Include</option>
						<option value="2" <% if (query.il === 2) { %>selected<% } %> >Exclude</option>
						<option value="3" <% if (query.il === 3) { %>selected<% } %> >Only</option>
					</select>
				</div>
			</div>
			<table id="orderTable" class="table table-sm table-hover mx-auto w-100">
				<thead class="thead-dark">
					<th class="w-20" onclick="sortTable(0, 'orderTable')">Item</th>
					<th class="w-10" onclick="sortTable(1, 'orderTable')">Size</th>
					<th class="w-5" onclick="sortTable(2, 'orderTable')">Quantity</th>
					<th class="w-10" onclick="sortTable(3, 'orderTable')">Demand Date</th>
					<th class="w-10" onclick="sortTable(4, 'orderTable')">Receipt Date</th>
					<th class="w-10" onclick="sortTable(5, 'orderTable')">Issue Date</th>
				</thead>
				<tbody>
					<% if (order.lines) { %>
						<% order.lines.forEach((line) => { %>
							<tr>
								<td><a href="/stores/items/<%= line.size.item_id %>"> <%= line.size.item._description %></a></td>
								<td><a href="/stores/item_sizes/<%= line.stock_id %>"> <%= line.size.size._text %></a></td>
								<td><a href="/stores/orders/<%= order.order_id %>"> <%= line._qty %></a></td>
								<td><% if (line.demand) { %><a href="/stores/demands/<%= line.demand_id %>"><%= line.demand._date.toDateString() %></a><% } %></td>
								<td><% if (line.receipt) { %><a href="/stores/receipts/<%= line.receipt_id %>"><%= line.receipt._date.toDateString() %></a><% } %></td>
								<td><% if (line.issue) { %><a href="/stores/issues/<%= line.issue_id %>"><%= line.issue._date.toDateString() %></a><% } %></td>
							</tr>
						<% }) %>
					<% } %>
				</tbody>
			</table>
		</div>
		<% if (permissions.access_notes) { %> 
			<div class="col-12 mb-3 bordered">
				<% include ../../partials/noteTable %>
			</div>
		<% } %>
	</div>
</section>
<% include ../../partials/foot/full %>
<script src="/js/filters.js"></script>
<script>
    function filterSelects() {
        filter(['sn', 'dl', 'rl', 'il'], "/stores/orders/<%= order.order_id %>");
    };
</script>
<% include ../../partials/foot/htmlClose %>