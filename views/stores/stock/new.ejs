<%- include(`${process.env.PARTIALS}/head/head`) %>
<body>
<%- include(`${process.env.PARTIALS}/head/flash`) %>
<section id='body'>
	<form id='stockForm' action="/stores/stock" method="POST">
        <input type="hidden" name="stock[size_id]" value="<%= item.size_id %>">
		<%- include(`${process.env.PARTIALS}/spinner`, {id: 'locations'}) %>
        <%- include(`${process.env.PARTIALS}/inputs/text`, {id: '_location', name: 'location', title: 'Location', maxlength: 10, required: true, list: true}) %>
        <% if (permissions.adjust_add) { %>
			<%- include(`${process.env.PARTIALS}/inputs/text`, {id: '_location', name: 'stock[_qty]', title: 'Quantity', value: 0, maxlength: 11}) %>
		<% } %>
		<%- include(`${process.env.PARTIALS}/save_cancel`) %>
	</form>
<%- include(`${process.env.PARTIALS}/foot/noNav`) %>
<script src='/js/data/addFormListener.js'></script>
<script src='/js/data/send.js'></script>
<script src='/js/data/XHRsend.js'></script>
<script src='/js/get.js'></script>
<script src='/js/spinner.js'></script>
<script src='/js/getLocations.js'></script>
<script async>get(getLocations, {table: 'locations', query: []})</script>
<script>
    window.addEventListener( "load", function () {
        addFormListener(
            'stockForm',
            'POST',
            '/stores/stock',
            {
                onComplete: window.opener.getStock,
                _close: true
            }
        );
    });
</script>
<%- include(`${process.env.PARTIALS}/foot/htmlClose`) %>
