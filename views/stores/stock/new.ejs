<% include ../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/items">Items</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/items/<%= item.item_id %>"><%= item.item._description %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/item_sizes/<%= item.item_size_id %>">Size: <%= item._size %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/locations/new">Add Location</a>
            </li>
        </ul>
    </nav>
</section>
<nav class="navbar navbar-expand navbar-dark bg-dark stores">
	<ul class="navbar-nav mr-auto">
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				Options
			</a>
			<div class="dropdown-menu" aria-labelledby="navbarDropdown">
				<a class="dropdown-item" href="/stores/item_sizes/<%= item.item_size_id %>">Back to <%= item.item._description %>/Size: <%= item._size %></a>
			</div>
		</li>
	</ul>
</nav>
<section class="container pt-3">
	<div class="row">
		<div class="col-12 col-lg-3 mx-auto mb-3 bordered">
			<h4>Location</h4>
			<form action="/stores/stock" method="POST" onsubmit="return confirm('Confirm add stock record?');">
				<div class="">
					<input type="hidden" name="stock[item_size_id]" value="<%= item.item_size_id %>" readonly>
					<p><input class="form-control" type="text" name="location" maxlength="10" placeholder="Location" required></p>
				</div>
				<% if (permissions.item_adjust) { %>
					<h4>Quantity</h4>
					<div class="">
						<p><input type="text" name="stock[_qty]" maxlength="11" placeholder="Quantity" value="0"></p>
					</div>
				<% } %>
				<p><button class="btn btn-success">Save</button></p>
			</form>
		</div>
    </div>
</section>
<% include ../../partials/foot/full %>
<% include ../../partials/foot/htmlClose %>
