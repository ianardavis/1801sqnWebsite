<%- include(`${partials}/head/app`, {text: 'Stores'}) %>
<%- include(`${partials}/breadcrumb`, {text: 'Loancards'}) %>
<%- include(`${partials}/reload`) %>
<%- include(`${partials}/spinner`, {id: 'loancards'}) %>
<%- include(`${partials}/head/components/close`) %>
<section class='container'>
	<div class="row justify-content-between">
		<div class="col-12 col-md-4 mb-1">
			<%- include(`${partials}/sidebar/button`, {id: 'filter', text: 'Filter'}) %>
		</div>
	</div>
	<table class="table table-sm table-hover">
		<thead class="thead-dark" id="tbl_loancards_head">
			<th class='w-35' data-column='["createdAt"]' data-dir="DESC">Date</th>
			<th class='w-35' data-column='["user_loancard","surname"]' 	>User</th>
			<th class='w-15' data-column='["lines"]' 					>Lines</th>
			<th class='w-15' data-column='["status"]' 					>Status</th>
			<th><i class="fas fa-search"></i></th>
		</thead>
		<tbody id="tbl_loancards"></tbody>
	</table>
	<%- include(`${partials}/limit`, {table: 'loancards'}) %>

	<div id="sidebars">
		<div class="offcanvas offcanvas-start" tabindex="-1" id="sdb_filter" aria-labelledby="sdb_filter_label">
			<%- include(`${partials}/sidebar/header`, {id: 'filter', text: 'Filter'}) %>
			<div class="offcanvas-body d-flex flex-column">
				<button class="btn btn-success w-100 mb-1" type="button" data-bs-toggle="modal" data-bs-target="#mdl_loancard_open">
					View Loancard
				</button>
				<%- include(`${partials}/filter/status`, {table: 'loancard'}) %>
				<%- include(`${partials}/filter/user`, {table: 'loancard'}) %>
				<%- include(`${partials}/filter/date`, {table: 'loancard'}) %>
			</div>
		</div>
	</div>
	<div id="modals">
		<div id='mdl_loancard_open' class="modal fade" tabindex="-1" role="dialog">
			<div class="modal-dialog modal-lg" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">View Loancard</h5>
					</div>
					<div class="modal-body">
						<%- include(`${partials}/inputs/text`, {id: 'goto_loancard_id', title: 'Loancard ID', onkeydown: 'GoToEnter(this)'}) %>
						<div id="scannerWindow" width="600px"></div>
					</div>
					<div class="modal-footer"></div>
				</div>
			</div>
		</div>
	</div>
</section>
<%- include(`${partials}/foot/app`) %>
<script src="/lib/js/html5-qrcode.min.js" type="text/javascript"></script>
<script src='/js/common/barcode_scanning.js'></script>
<script src='/js/stores/loancards/index/view.js'></script>
<script src='/js/utils/list/users.js'></script>
<%- include(`${partials}/foot/components/htmlClose`) %>