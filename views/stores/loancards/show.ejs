<%- include(`${partials}/head/app`) %>
<%- include(`${partials}/breadcrumb`, {href: '/stores',	   text: 'Stores'}) %>
<%- include(`${partials}/breadcrumb`, {href: '/loancards', text: 'Loancards'}) %>
<%- include(`${partials}/breadcrumb`) %>
<%- include(`${partials}/reload`) %>
<%- include(`${partials}/head/navbar/close`) %>
<section class='container'>
	<ul class="nav nav-tabs" id="mainTab" role="tablist">
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="optionsDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				Menu
			</a>
			<div class="dropdown-menu" aria-labelledby="optionsDropdown">
				<%- include(`${partials}/menu/button`, {id: 'note_add', text: 'Add Note', modal: 'note_add'}) %>
				
				<% if (permissions.loancard_line_edit) { %>
					<%- include(`${partials}/menu/button`, {id: 'action', text: 'Action Lines', form: 'action'}) %>
					<script src="/js/stores/loancards/show/listeners/action.js"></script>
				<% } %>

				<form id='form_raise'>
					<%- include(`${partials}/menu/button`, {id: 'raise', text: 'Raise'}) %>
					<script src="/js/stores/loancards/show/listeners/raise.js"></script>
				</form>
				<%- include(`${partials}/menu/button`, {id: 'download', text: 'Download'}) %>

				<% if (permissions.loancard_edit) { %>
					<form id='form_complete'>
						<input type="hidden" name='_status' value='2'>
						<%- include(`${partials}/menu/button`, {id: 'complete', text: 'Complete'}) %>
					</form>
					<script src="/js/stores/loancards/show/listeners/complete.js"></script>
				<% } %>

				<% if (permissions.loancard_delete) { %>
					<form id='form_delete'>
						<%- include(`${partials}/menu/button`, {id: 'delete', text: 'Cancel'}) %>
					</form>
					<script src="/js/stores/loancards/show/listeners/delete.js"></script>
				<% } %>
			</div>
		</li>
        <%- include(`${partials}/tab_head`, {id: 'details', title: 'Details', spinner: 'loancard'}) %>
        <%- include(`${partials}/tab_head`, {id: 'lines',   title: 'Lines',	  spinner: 'loancard_lines', count_id: 'line', permission: 'access_loancard_lines'}) %>
        <%- include(`${partials}/tab_head`, {id: 'notes',   title: 'Notes',	  spinner: 'notes', 	   	 count_id: 'note', permission: 'access_notes'}) %>
    </ul>
    <div class="tab-content pt-3" id="myTabContent">
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
			<%- include(`${partials}/inputs/display`, {id: 'loancard_user_loancard', title: 'User',  link: true}) %>
			<%- include(`${partials}/inputs/display`, {id: 'loancard_createdAt', 	 title: 'Date'}) %>
			<%- include(`${partials}/inputs/display`, {id: 'loancard_updatedAt', 	 title: 'Last Updated'}) %>
			<%- include(`${partials}/inputs/display`, {id: 'loancard_status',   	 title: 'Status'}) %>
			<%- include(`${partials}/inputs/display`, {id: 'loancard_filename',  	 title: 'Filename'}) %>
			<%- include(`${partials}/inputs/display`, {id: 'loancard_user',			 title: 'Raised By', link: true}) %>
		</div>
		<% if (permissions.access_loancard_lines) { %>
			<div class="tab-pane fade" id="lines" role="tabpanel" aria-labelledby="lines-tab">
				<%- include(`${partials}/inputs/select`, {title: 'Status', id: 'sel_status', options: [{value: '', text: 'All', selected: true}, {value: 'status=0', text: 'Cancelled'}, {value: 'status=1', text: 'Pending'}, {value: 'status=2', text: 'Open'}, {value: 'status=3', text: 'Returned'}]}) %>
				<% if (permissions.loancard_line_edit) { %><form id='form_action'><% } %>
				<table class='table table-sm table-hover'>
					<thead class='thead-dark'>
						<th class='w-30' onclick="sortTable(1,'tbl_lines')">Item</th>
						<th class='w-40' onclick="sortTable(2,'tbl_lines')">Size</th>
						<th class='w-10' onclick="sortTable(3,'tbl_lines')">Qty</th>
						<th class='w-20' onclick="sortTable(4,'tbl_lines')">Status</th>
						<th><i class='fas fa-search'></i></th>
					</thead>
					<tbody id='tbl_lines'></tbody>
				</table>
				<% if (permissions.loancard_line_edit) { %></form><% } %>
			</div>
		<% } %>
        <%- include(`${partials}/notes/tab_body`) %>
	</div>
	<div id="div_modals">
		<% if (permissions.access_loancard_lines) { %>
			<div id='mdl_line_view' class="modal fade" tabindex="-1" role="dialog">
				<div class="modal-dialog modal-lg" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">Loancard Line <span id="line_id_view"></span></h5>
							<span id="span_view_buttons" class="float-end"></span>
						</div>
						<div class="modal-body">
							<%- include(`${partials}/inputs/display`, {title: 'Item', 	  	  id: 'line_item', link: true}) %>
							<%- include(`${partials}/inputs/display`, {title: 'Size', 	  	  id: 'line_size', link: true}) %>
							<%- include(`${partials}/inputs/display`, {title: 'Quantity', 	  id: 'line_qty'}) %>
							<%- include(`${partials}/inputs/display`, {title: 'Raised by',	  id: 'line_user', link: true}) %>
							<%- include(`${partials}/inputs/display`, {title: 'Raised',	  	  id: 'line_createdAt'}) %>
							<%- include(`${partials}/inputs/display`, {title: 'Last Updated', id: 'line_updatedAt'}) %>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
		<% } %>
	</div>
</section>
<%- include(`${partials}/foot/app`) %>
<script src='/js/tabs.js'></script>
<script src="/js/search/select.js"></script>
<script src="/js/addFormListener.js"></script>
<script>showTab('<%= tab %>')</script>

<script src="/js/stores/loancards/show/view.js"></script>
<!-- <script src="/js/download.js"></script> -->
<script async>getLoancard()</script>

<% if (permissions.loancard_edit) { %>
	<script src="/js/stores/loancards/show/edit.js"></script>
	<script async>setButtons()</script>
<% } %>
<% if (permissions.access_loancard_lines) { %>
	<script src="/js/stores/loancards/show/lines/view.js"></script>
	<script async>getLines()</script>
	<% if (permissions.access_notes) { %>
		<script>
            set_attribute({id: 'btn_loancard_lines_note_add', attribute: 'data-source', value: 'line_view'});
			modalOnShow('line_view', function (event) {
				set_attribute({id: 'btn_loancard_lines_note_add', attribute: 'data-_table', value: 'loancard_lines'});
				set_attribute({id: 'btn_loancard_lines_note_add', attribute: 'data-_id',    value: event.relatedTarget.dataset.loancard_line_id});
				getLineNotes({
					line_id: 'loancard_lines',
					table: 	 'loancard_lines',
					id:		 event.relatedTarget.dataset.loancard_line_id
				})
			})
		</script>
	<% } %>
	<% if (permissions.loancard_line_edit) { %>
		<script src="/js/stores/stock/list.js"></script>
		<script src="/js/stores/serials/list.js"></script>
		<script src="/js/stores/loancards/show/lines/edit.js"></script>
		<script async>setActions()</script>
		<script async>setLineButtons();</script>
	<% } %>
<% } %>
<%- include(`${partials}/foot/elements/htmlClose`) %>