<% include ../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores">Stores</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/settings">Settings</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/settings">Statuses</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/settings"><%= status._status %></a>
			</li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/statuses/<%= status.status_id %>">Edit</a>
            </li>
        </ul>
    </nav>
</section>
<section class="container">
	<div class="row">
		<div class="col-12 col-md-3 mx-auto bordered">
			<h4>Status</h4>
			<form action="/stores/statuses/<%= status.status_id %>?_method=PUT" method="POST">
				<input type="hidden" name="status_id" value="<%= status.status_id %>" readonly>
				<input class="form-control" type="text" name="status[_status]" maxlength="10" value="<%= status._status %>" required>
				<input class="btn btn-success w-100 confirm" type="submit" value='Save'>
			</form>
		</div>
		<div class="col-12 col-md-9 mx-auto bordered">
			<% if (permissions.notes_add) { %>
				<a class="float-left btn btn-success" href="/stores/notes/new?table=statuses&id=<%= status.status_id %>">
					<i class='fas fa-plus'></i>
				</a>
			<% } %>
			<% include ../../partials/noteTable %>
		</div>
	</div>
</section>
<% include ../../partials/foot/full %>
<script>
    function filterSelects() {
        filter(['system'],"/stores/statuses/<%= status.status_id %>/edit");
    };
</script>
<% include ../../partials/foot/htmlClose %>
