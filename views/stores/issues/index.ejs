<%- include(`${partials}/head/full`) %>
<section class='mb-2'>
    <nav class='navbar navbar-expand navbar-light bg-nav'>
        <ul class='navbar-nav mr-auto'>
            <%- include(`${partials}/breadcrumb`, {href: '/stores',		   text: 'Stores'}) %>
            <%- include(`${partials}/breadcrumb`, {href: '/stores/issues', text: 'Issues'}) %>
			<%- include(`${partials}/reload`) %>
        </ul>
    </nav>
</section>
<section class='container'>
	<%- include(`${partials}/inputs/select`, {title: 'Status', id: 'sel_status', options: [{value: '', text: 'All'}, {value: '_status=0', text: 'Cancelled'}, {value: '_status=1', text: 'Draft', selected: true}, {value: '_status=2', text: 'Open'}, {value: '_status=3', text: 'Complete'}]}) %>
	<%- include(`${partials}/spinner`, {id: 'issues'}) %>
	<table class="table table-sm table-hover">
		<thead class="thead-dark">
			<th class="w-40" onclick="sortTable(0, 'issueTable')">Issued To</th>
			<th class="w-30" onclick="sortTable(1, 'issueTable')">Date</th>
			<th class="w-15" onclick="sortTable(2, 'issueTable')">Lines</th>
			<th class="w-15" onclick="sortTable(3, 'issueTable')">Status</th>
			<th><i class="fas fa-search"></i></th>
		</thead>
		<tbody id="tbl_issues"></tbody>
	</table>
</section>
<%- include(`${partials}/foot/full`) %>
<script src='/js/stores/issues/index/issues.js'></script>
<script src='/js/data/addFormListener.js'></script>
<script src='/js/data/send.js'></script>
<script async>getIssues()</script>
<%- include(`${partials}/foot/htmlClose`) %>
