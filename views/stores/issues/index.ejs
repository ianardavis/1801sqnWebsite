<% include ../../partials/head/full %>
<section class='mb-2'>
    <nav class='navbar navbar-expand navbar-light bg-nav'>
        <ul class='navbar-nav mr-auto'>
            <li class='nav-item'>
                <a class='nav-link stores_nav' href='/stores'>Stores</a>
            </li>
            <li class='nav-item'>
                <a class='nav-link stores_nav' href='/stores/issues'>Issues</a>
            </li>
        </ul>
    </nav>
</section>
<section class='container'>
	<div class="input-group mb-2">
		<div class="input-group-prepend w-25">
			<label class="input-group-text w-100" for="sel_complete">Complete Issues</label>
		</div>
		<select class="custom-select" id='sel_complete' onchange=getIssues()>
			<option value='1' selected>Include</option>
			<option value='2'>Exclude</option>
			<option value='3'>Only</option>
		</select>
	</div>
	<div class="input-group mb-2">
		<div class="input-group-prepend w-25">
			<label class="input-group-text w-100" for="sel_closed">Closed Issues</label>
		</div>
		<select class="custom-select" id='sel_closed' onchange=getIssues()>
			<option value='1' selected>Include</option>
			<option value='2'>Exclude</option>
			<option value='3'>Only</option>
		</select>
	</div>
	<div id='spn_issues' class="spinner-border text-primary" role="status">
		<span class="sr-only">Loading...</span>
	</div>
	<table class="table table-sm table-hover">
		<thead class="thead-dark">
			<th class="w-40" onclick="sortTable(0, 'issueTable')">Issued To</th>
			<th class="w-30" onclick="sortTable(1, 'issueTable')">Date</th>
			<th class="w-10" onclick="sortTable(2, 'issueTable')">Lines</th>
			<th class="w-10" onclick="sortTable(3, 'issueTable')">Complete</th>
			<th class="w-10" onclick="sortTable(4, 'issueTable')">Closed</th>
			<th><i class="fas fa-search"></i></th>
		</thead>
		<tbody id="issueTable">
		</tbody>
	</table>
</section>
<% include ../../partials/foot/full %>
<script src='/js/specific/issues_index.js'></script>
<script async>getIssues()</script>
<% include ../../partials/foot/htmlClose %>
