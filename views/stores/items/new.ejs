<%- include(`${process.env.PARTIALS}/head/head`) %>
<body>
<%- include(`${process.env.PARTIALS}/head/flash`) %>
<section id='body'>
    <form id='itemForm'>
        <%- include(`${process.env.PARTIALS}/inputs/text`, {title: 'Description', name: 'item[_description]', placeholder: 'Required', maxLength: 45, required: true}) %>
        <%- include(`${process.env.PARTIALS}/itemOptions`) %>
        <%- include(`${process.env.PARTIALS}/inputs/text`, {title: 'Size Text', name: 'item[_size_text]', placeholder: 'Required', maxLength: 45, required: true}) %>
        <%- include(`${process.env.PARTIALS}/save_cancel`) %>
    </form>
<%- include(`${process.env.PARTIALS}/foot/noNav`) %>
<script src="/js/data/addFormListener.js"></script>
<script src="/js/data/send.js"></script>
<script>
    window.addEventListener( "load", function () {
        addFormListener(
            'itemForm',
            'POST',
            '/stores/items',
            {
                onComplete: window.opener.getItems,
                _close: true
            }
        );
    });
</script>
<%- include(`${process.env.PARTIALS}/foot/htmlClose`) %>