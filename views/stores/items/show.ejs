<%- include(`${partials}/head/app`) %>
<%- include(`${partials}/breadcrumb`, {href: '/stores',       text: 'Stores'}) %>
<%- include(`${partials}/breadcrumb`, {href: '/stores/items', text: 'Items'}) %>
<%- include(`${partials}/breadcrumb`) %>
<%- include(`${partials}/reload`) %>
<%- include(`${partials}/head/navbar/close`) %>
<section class='container'>
    <ul class="nav nav-tabs" id="mainTab" role="tablist">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%- include(`${partials}/menu/button`, {id: 'item_edit', text: 'Edit',     modal: 'item_edit'}) %>
				<%- include(`${partials}/menu/button`, {id: 'note_add',  text: 'Add Note', modal: 'note_add'}) %>
                <% if (permissions.item_delete) { %>
                    <form id='form_delete'>
                <% } %>
				<%- include(`${partials}/menu/button`, {id: 'delete',    text: 'Delete'}) %>
                <% if (permissions.item_delete) { %>
					</form>
					<script src="/js/stores/items/show/listeners/delete.js"></script>
				<% } %>
                <%- include(`${partials}/menu/button`, {id: 'size_add', text: 'Add Size', modal: 'size_add'}) %>
            </div>
        </li>
        <%- include(`${partials}/tab_head`, {id: 'details', title: 'Details', spinner: 'item'}) %>
        <%- include(`${partials}/tab_head`, {id: 'sizes',   title: 'Sizes',   spinner: 'sizes', count_id: 'size', permission: 'access_sizes'}) %>
        <%- include(`${partials}/tab_head`, {id: 'notes',   title: 'Notes',   spinner: 'notes', count_id: 'note', permission: 'access_notes'}) %>
    </ul>
    <div class="tab-content pt-3" id="myTabContent">
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
            <%- include(`${partials}/inputs/display`, {id: '_description', title: 'Description'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_gender',      title: 'Gender'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_size_text',   title: 'Size Text'}) %>
            <div id="div_categories">
                <table class='table table-sm table-hover w-100'>
                    <thead class='thead-dark'>
                        <th class='w-100' onclick='sortTable(0, "tbl_categories")'>Categories</th>
                        <th><i class='fas fa-trash-alt'></i></th>
                    </thead>
                    <tbody id='tbl_categories'></tbody>
                </table>
            </div>
        </div>
        <% if (permissions.access_sizes) { %>
            <div class="tab-pane fade" id="sizes" role="tabpanel" aria-labelledby="sizes-tab">
                <table class='table table-sm table-hover w-100'>
                    <thead class='thead-dark'>
                        <th class='w-100' onclick='sortTable(0, "tbl_sizes")' id='size_text'></th>
                        <th><i class='fas fa-search'></i></th>
                    </thead>
                    <tbody id='tbl_sizes'></tbody>
                </table>
            </div>
        <% } %>
        <%- include(`${partials}/notes/tab_body`) %>
    </div>
    <div id="div_modals">
        <% if (permissions.item_edit) { %>
            <div id='mdl_item_edit' class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <form class="modal-content" id='form_item_edit'>
                        <div class="modal-header">
                            <h5 class="modal-title">
                                Edit Item
                                <%- include(`${partials}/spinner`, {id: 'item_edit'}) %>
                            </h5>
                            <a class="float-right btn btn-primary" id='reload_item_edit'>
                                <i class='fas fa-redo'></i>
                            </a>
                        </div>
                        <div class="modal-body">
                            <%- include(`${partials}/inputs/text`,   {id: '_description_edit', title: 'Description', name: 'item[_description]', placeholder: 'Required', maxLength: 45, required: true}) %>
                            <%- include(`${partials}/inputs/text`,   {id: '_size_text_edit',   title: 'Size Text',   name: 'item[_size_text]',   placeholder: 'Required', maxLength: 45, required: true}) %>
                            <%- include(`${partials}/inputs/select`, {id: 'sel_genders_edit',  title: 'Gender',      spinner_id: 'genders'}) %>
                        </div>
                        <div class="modal-footer">
                            <input type="submit"  class="btn btn-success w-100" value='Save Item'>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
            <script src='/js/stores/items/show/edit.js'></script>
        <% } %>
        <% if (permissions.size_add) { %>
            <div id='mdl_size_add' class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <form class="modal-content" id='form_size_add'>
                        <div class="modal-header">
                            <h5 class="modal-title">Add Size</h5>
                            <a class="float-right btn btn-primary" id='reload_size_add'>
                                <i class='fas fa-redo'></i>
                            </a>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name='size[item_id]' id='item_id_add_size'>
                            <%- include(`${partials}/inputs/text`,          {name: 'size[_size]',       title: 'Size',         id:'_size',        maxlength: 15, placeholder: 'Required', required: true}) %>
                            <%- include(`${partials}/inputs/select_yes_no`, {name: 'size[_issueable]',  title: 'Issueable',    id: '_issueable'}) %>
                            <%- include(`${partials}/inputs/select_yes_no`, {name: 'size[_orderable]',  title: 'Orderable',    id: '_orderable'}) %>
                            <%- include(`${partials}/inputs/select_yes_no`, {name: 'size[_serials]',    title: 'Has Serial #', id: '_serials'}) %>
                            <%- include(`${partials}/inputs/select_yes_no`, {name: 'size[_nsns]',       title: 'Has NSNs',     id: '_nsns'}) %>
                            <%- include(`${partials}/inputs/select`,        {name: 'size[supplier_id]', title: 'Supplier',     id: 'supplier_id', spinner_id: 'suppliers'}) %>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-success w-100" value='Save Size'>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
            <script src='/js/stores/items/show/addSize.js'></script>
        <% } %>
    </div>
</section>
<%- include(`${partials}/foot/app`) %>
<script src="/js/data/addFormListener.js"></script>
<script src='/js/tabs.js'></script>
<script src='/js/stores/items/show/view.js'></script>
<script>showTab('<%= tab %>')</script>
<script async>getItem()</script>
<script async>getCategories()</script>
<% if (permissions.item_edit) { %>
    <script>loadCategoryDelete()</script>
<% } %>
<% if (permissions.access_sizes) { %>
    <script src='/js/stores/items/show/getSizes.js'></script>
    <script async>getSizes()</script>
<% } %>
<%- include(`${partials}/foot/elements/htmlClose`) %>
