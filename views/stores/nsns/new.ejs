<section class="container pt-3">
	<div class="row">
		<div class="col-12 col-lg-3 mx-auto mb-3 bordered">
			<h4>NSN</h4>
			<form action="/stores/nsns" method="POST" onsubmit="return confirm('Add NSN?');">
				<input type="hidden" name="nsn[itemsize_id]" value="<%= itemsize.itemsize_id %>" readonly>
				<p><input class="form-control" type="text" inputmode="numeric" name="nsn[_nsn]" maxlength="20" placeholder="NSN" required></p>
				<p><input class="form-control" type="checkbox" name="default" value="1"></p>
				<p><button class="btn btn-success">Save</button></p>
			</form>
		</div>
    </div>
</section>
