<% include ../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/reports">Reports</a>
            </li>
        </ul>
    </nav>
</section>
<section class="mb-2">
    <div class="container">
        <% let cards = [] %>
        <% cards.push({id: '1', title: 'Negative Stock',      image: 'search-minus'}) %>
        <% cards.push({id: '2', title: 'Issues Due Back',     image: 'calendar-check'}) %>
        <% cards.push({id: '3', title: 'Orderable Stock',     image: 'tshirt'}) %>
        <% cards.push({id: '4', title: 'Stock - By Item',     image: 'tshirt'}) %>
        <% cards.push({id: '5', title: 'Stock - By Location', image: 'tshirt'}) %>
        <div class="row container m-auto p-0 menu">
            <% cards.forEach(card => { %>
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <div class="card m-3">
                        <a href="/stores/reports/<%= card.id %>">
                            <div class="card-header">
                                <h3><%= card.title %></h3>
                            </div>
                            <div class="card-body">
                                <i class="fas fa-<%= card.image %> fa-5x"></i>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>
<% include ../../partials/foot/full %>
<% include ../../partials/foot/htmlClose %>