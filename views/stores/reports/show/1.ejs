<% include ../../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/reports">Reports</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/reports/1">Negative Stock</a>
            </li>
        </ul>
    </nav>
</section>
<section class="mb-2">
    <div class="container">
        <table class="table table-sm table-hover">
            <thead class="thead-dark">
                <th class="w-40" onclick="sortTable(0, 'tableItems')">Item</th>
                <th class="w-40" onclick="sortTable(1, 'tableItems')">Size</th>
                <th class="w-10" onclick="sortTable(2, 'tableItems')">Location</th>
                <th class="w-10" onclick="sortTable(3, 'tableItems')">Qty</th>
                <th><i class="fas fa-pencil-alt"></i></th>
            </thead>
            <tbody id="tableItems">
                <% if (stock) { %>
                    <% stock.forEach(item => { %>
                        <tr>
                            <td>
                                <a class="btn btn-sm btn-primary float-right" href="/stores/items/<%= item.item_size.item_id %>"><i class="fas fa-search"></i></a>
                                <%= item.item_size.item._description %>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary float-right" href="/stores/item_sizes/<%= item.item_size_id %>"><i class="fas fa-search"></i></a>
                                <%= item.item_size._size %>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary float-right" href="/stores/stock/<%= item.stock_id %>/edit"><i class="fas fa-search"></i></a>
                                <%= item.location._location %>
                            </td>
                            <td>
                                <%= item._qty %></a>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/stores/adjusts/new?stock_id=<%= item.stock_id %>&adjustType=Count">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</section>
<% include ../../../partials/foot/full %>
<% include ../../../partials/foot/htmlClose %>