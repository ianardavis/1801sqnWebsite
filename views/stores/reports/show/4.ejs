<%- include(`${partials}/head/app`, {text: 'Stores'}) %>
<%- include(`${partials}/breadcrumb`, {text: 'Reports', href: '/reports'}) %>
<%- include(`${partials}/breadcrumb`, {text: 'Stock - By Location'}) %>
<%- include(`${partials}/reload`) %>
<%- include(`${partials}/head/components/close`) %>
<section class='container'>
    <form id="form_stocks">
        <input type="hidden" name='location_id' id='location_id'>
        <button id='btn_action' class='btn btn-success w-100 mb-1'>Action Counts</button>
        <select class='form-select mb-1' id="sel_location"></select>
        <table class="table table-sm table-hover">
            <thead class="thead-dark" id="tbl_stocks_head">
                <th class='w-35' data-column='["size","item","description"]' data-dir="ASC">Item</th>
                <th class='w-15' data-column='["size","size1"]'>Size 1</th>
                <th class='w-15' data-column='["size","size2"]'>Size 2</th>
                <th class='w-15' data-column='["size","size3"]'>Size 3</th>
                <th class='w-10' data-column='["qty"]'>Stock Qty</th>
                <th class='w-10'>Count</th>
                <th><i class="fas fa-search"></i></th>
            </thead>
            <tbody id="tbl_stocks"></tbody>
        </table>
    </form>
</section>
