<%- include(`${partials}/head/app`, {text: 'Stores'}) %>
<%- include(`${partials}/breadcrumb`, {text: 'Reports', href: '/reports'}) %>
<%- include(`${partials}/breadcrumb`, {text: 'Issues Overdue'}) %>
<%- include(`${partials}/reload`) %>
<%- include(`${partials}/spinner`,    {id: 'loancard_lines_due'}) %>
<%- include(`${partials}/head/components/close`) %>
<section class='container'>
    <form id="form_actions">
        <button id='btn_action' class="btn btn-success w-100 mb-1" disabled>Action lines</button>
        <table class="table table-sm table-hover">
            <thead class="thead-dark">
                <th class='w-25'>Issued To</th>
                <th class='w-15'>Description</th>
                <th class='w-15' onclick='sortByRow(this, getLines)' data-sort_col='size_id'  >Size<span class='sort_ind float-end'></span></th>
                <th class='w-5'  onclick='sortByRow(this, getLines)' data-sort_col='qty'      >Qty<span class='sort_ind float-end'></span></th>
                <th class='w-15' onclick='sortByRow(this, getLines)' data-sort_col='createdAt'>Date Issued<span class='sort_ind float-end'></span></th>
                <th class='w-15'>Date Due</th>
                <th class='w-15' onclick='sortByRow(this, getLines)' data-sort_col='status'>
                    <% if (permissions.issuer) { %>
                        <select id="sel_all" class='form-select form-select-sm hidden'>
                            <option>Select All</option>
                            <option value="3">Return</option>
                        </select>
                    <% } %>
                    Status
                    <span class='sort_ind float-end'></span>
                </th>
                <th><i class='fas fa-search'></i></th>
            </thead>
            <tbody id="tbl_issues"></tbody>
        </table>
    </form>
</section>
<%- include(`${partials}/foot/app`) %>
<script src="/js/stores/reports/2/view.js"></script>
<script src="/js/stores/loancard_lines/edit.js"></script>
<script>getLines()</script>
<%- include(`${partials}/foot/components/htmlClose`) %>