<% include ../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
        </ul>
    </nav>
</section>
<section id="menu">
	<div class="row container m-auto p-0">
		<% if (permissions.access_suppliers) { %>
			<div class="bordered col-6 col-sm-4 p-3 menu_item">
				<a href="stores/suppliers">
