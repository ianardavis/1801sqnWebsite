				<a href="stores/users">
					<p><i class="fas fa-user fa-5x"></i></p>
					<p>Users</p>
				</a>
			<% } else { %>
				<a href="stores/users/<%= currentUser.user_id %>">
					<i class="fas fa-user fa-5x"></i>
					<p>Users</p>
				</a>
			<% } %>
		</div>
		<% if (permissions.access_items) { %>
