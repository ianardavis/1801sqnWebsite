<!-- CADET NEW PAGE -->
<% include ../../partials/header %>
<% include ../../partials/nav %>
<% include ../../partials/bodyTop %>
<section class="container page_title">
    <a href="/stores"><h2>Stores Management</h2></a>
    <h3>Edit User: <%= user._rank %> <%= user._ini %> <%= user._name %></h3>
</section>
<section style="width: 50%" class="container-fluid p-5">
    <form action="/stores/users/<%= user.user_id %>?_method=PUT" method="POST">
        <input type="hidden" name="permission", value="users_edit" readonly>
        <input type="hidden" name="failRedirect", value="/stores/users/<%= user.user_id %>" readonly>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_bader">Bader #:</label>
            <div class="col-sm-10">
                <input class="form-control" id="_bader" name="_bader" type="text" value="<%= user._bader %>">
            </div>
        </div>
        <div class="form-group row form-inline">
            <label class="col-sm-2 col-form-label" for="_name">Name:</label>
            <div class="col-sm-10">
                <select id="ranksSel" class="form-control" name="_rank" type="text">
                    <% ranks.forEach((rank) => { %>
                        <% if(user._rank === rank) { %>
                            <option value="<%= rank %>"selected><%= rank %></option>
                        <% } else { %>
                            <option value="<%= rank %>"><%= rank %></option>
                        <% } %>                     
                    <% }) %>
                </select>
                <input class="form-control" name="_name" type="text" value="<%= user._name %>">
                <input class="form-control" name="_ini" type="text" value="<%= user._ini %>">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_gender">Gender:</label>
            <div class="col-sm-10">
                <select id="genderSel" class="form-control" name="_gender" type="text">
                    <% genders.forEach((gender) => { %>
                        <% if(user._gender === gender) { %>
                            <option value="<%= gender %>"selected><%= gender %></option>
                        <% } else { %>
                            <option value="<%= gender %>"><%= gender %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_status">Status:</label>
            <div class="col-sm-10">
                <select id="statusSel" class="form-control" name="_status" type="text" >
                    <% statuses.forEach((status) => { %>
                        <% if(user._status === status) { %>
                            <option value="<%= status %>"selected><%= status %></option>
                        <% } else { %>
                            <option value="<%= status %>"><%= status %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_login_id">Login ID:</label>
            <div class="col-sm-10">
                <input class="form-control" id="_login_id" name="_login_id" type="text" value="<%= user._login_id %>">
            </div>
        </div>
        <div class="form-group row">
            <button type="submit" id="_submit" class="btn btn-primary btn-lg col-12">Save</button>
        </div>
        <div class="form-group row">
            <a href="/stores/users/<%= user.user_id %>">Cancel</a>
        </div>
    </form>
</section>
<% include ../../partials/bodyBottom %>
<% include ../../partials/footer %>
<% include ../../partials/footjs %>
<script src="/js/storesUserEdit.js"></script>
<% include ../../partials/htmlBottom %>