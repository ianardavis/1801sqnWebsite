<!-- USERS NEW PAGE -->
<% include ../../partials/header %>
<% include ../../partials/nav %>
<% include ../../partials/bodyTop %>
<section class="container page_title">
    <a href="/stores"><h2>Stores Management</h2></a>
    <h3>New User</h3>
</section>
<section class="container-fluid p-5">
    <form action="/stores/users" method="POST">
        <input type="hidden" name="permission", value="users_add" readonly>
        <input type="hidden" name="failRedirect", value="/stores/users" readonly>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_bader">Bader #:</label>
            <div class="col-sm-10">
                <input class="form-control" id="_bader" name="_bader" type="text" placeholder="Bader or Service #" maxlength="20" required>
            </div>
        </div>
        <div class="form-group row form-inline">
            <label class="col-sm-2 col-form-label" for="_name">Name:</label>
            <div class="col-sm-10">
                <select class="form-control" name="_rank" type="text">
                    <% ranks.forEach((rank) => { %>
                        <option value="<%= rank %>"><%= rank %></option>         
                    <% }) %>
                </select>
                <input class="form-control" name="_name" type="text" placeholder="Surname" maxlength="50" required>
                <input class="form-control" name="_ini" type="text" placeholder="Initials" maxlength="5">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_gender">Gender:</label>
            <div class="col-sm-10">
                <select class="form-control" name="_gender" type="text" >
                    <% genders.forEach((gender) => { %>
                        <option value="<%= gender %>"><%= gender %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_status">Status:</label>
            <div class="col-sm-10">
                <select class="form-control" name="_status" type="text" >
                    <% statuses.forEach((status) => { %>
                        <option value="<%= status %>"><%= status %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_login_id">Login ID:</label>
            <div class="col-sm-10">
                <input class="form-control" id="_login_id" name="_login_id" type="text" maxlength="30" required>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_password">Password:</label>
            <div class="col-sm-10">
                <input class="form-control" id="_password" name="_password" type="password" password minlength="8" required>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_confirm_password">Confirm Password:</label>
            <div class="col-sm-10">
                <input class="form-control" id="_confirm" type="password" password minlength="8" required>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="_reset">Change at Next Login:</label>
            <div class="col-sm-10">
                <input class="form-control" name="_reset" type="checkbox">
            </div>
        </div>
        </div>
        <div class="form-group row">
            <button type="submit" id="_submit" class="btn btn-primary btn-lg col-12">Save</button>
        </div>
        <div class="form-group row">
            <a href="/stores/users">Cancel</a>
        </div>
    </form>
</section>
<% include ../../partials/bodyBottom %>
<% include ../../partials/footer %>
<% include ../../partials/footjs %>
<script src="/js/storesUserNew.js"></script>
<% include ../../partials/htmlBottom %>