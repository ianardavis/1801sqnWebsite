<% include ../../partials/head/full %>
<section class='mb-2'>
    <nav class='navbar navbar-expand navbar-light bg-nav'>
        <ul class='navbar-nav mr-auto'>
			<li class='nav-item'>
				<a class='nav-link stores_nav' href='/stores'>Stores</a>
			</li>
			<li class='nav-item'>
				<a class='nav-link stores_nav' href='/stores/settings'>Settings</a>
			</li>
			<li class='nav-item'>
				<a class='nav-link stores_nav' href='/stores/settings'>Ranks</a>
			</li>
			<li class='nav-item'>
				<a class='nav-link stores_nav' href='/stores/settings'><%= rank._rank %></a>
			</li>
            <li class='nav-item'>
                <a class='nav-link stores_nav' href='/stores/ranks/<%= rank.rank_id %>'>Edit</a>
            </li>
        </ul>
    </nav>
</section>
<section class='container pt-3'>
	<div class='row'>
		<div class='col-12 col-md-3 mx-auto bordered'>
			<h4>Rank</h4>
			<form action='/stores/ranks/<%= rank.rank_id %>?_method=PUT' method='POST'>
				<input class='form-control' type='text' name='rank[_rank]' maxlength='10' value='<%= rank._rank %>' required>
				<input class='btn btn-success w-100 confirm' type='submit' value='Save'>
			</form>
		</div>
		<div class='col-12 col-md-9 mx-auto bordered'>
			<% if (permissions.notes_add) { %>
				<a class='float-left btn btn-success' href='/stores/notes/new?table=ranks&id=<%= rank.rank_id %>'>
					<i class='fas fa-plus'></i>
				</a>
			<% } %>
			<% include ../../partials/noteTable %>
		</div>
	</div>
</section>
<% include ../../partials/foot/full %>
<script>
    function filterSelects() {
        filter(['system'],'/stores/ranks/<%= rank.rank_id %>/edit');
    };
</script>
<% include ../../partials/foot/htmlClose %>
