<% include ../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/suppliers">Suppliers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/suppliers/new">New</a>
            </li>
        </ul>
    </nav>
</section>
<section class="row">
    <div class="col-md-9 col-xl-6 container bordered p-5">
        <form action="/stores/suppliers" method="POST" onsubmit="return confirm('Confirm add supplier?');">
            <div class="form-group row">
                <div class="col-sm-2">
                    <label class="col-form-label" for="_name">Supplier Name:</label>
                </div>
                <div class="col-sm-10">
                    <input class="form-control" id="_name" name="supplier[_name]" type="text" placeholder="Supplier Name" maxlength="20" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label class="col-form-label" for="_address1">Address:</label>
                </div>
                <div class="col-sm-10">
                    <input class="form-control" id="_address1" name="supplier[_address1]" type="text" placeholder="Building Name" maxlength="45" required>
                    <input class="form-control" name="supplier[_address2]" type="text" placeholder="Street" maxlength="45">
                    <input class="form-control" name="supplier[_address3]" type="text" placeholder="Town" maxlength="45">
                    <input class="form-control" name="supplier[_address4]" type="text" placeholder="County" maxlength="45">
                    <input class="form-control" name="supplier[_address5]" type="text" placeholder="Post Code" maxlength="45">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label class="col-form-label" for="_telephone">Telephone:</label>
                </div>
                <div class="col-sm-10">
                    <input class="form-control" id="_telephone" name="supplier[_telephone]" type="text" placeholder="Telephone" maxlength="20">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label class="col-form-label" for="_email">Email:</label>
                </div>
                <div class="col-sm-10">
                    <input class="form-control" id="_email" name="supplier[_email]" type="text" placeholder="address@domain.com" maxlength="255">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label class="col-form-label" for="_stores">RAF Stores?:</label>
                </div>
                <div class="col-sm-10">
                    <input class="form-control" id="_stores" name="supplier[_stores]" type="checkbox" value="1">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label class="col-form-label" for="_raise_demand">Create Demand File?:</label>
                </div>
                <div class="col-sm-10">
                    <input class="form-control" id="_raise_demand" name="supplier[_raise_demand]" type="checkbox" value="1">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label class="col-form-label" for="_default">Make default?:</label>
                </div>
                <div class="col-sm-10">
                    <input class="form-control" id="_default" name="default" type="checkbox" value="1">
                </div>
            </div>
            <div class="form-group row">
                <button class="btn btn-primary btn-lg col-12" type="submit" id="_submit">Save</button>
            </div>
            <div class="form-group row">
                <a href="/stores/suppliers">Cancel</a>
            </div>
        </form>
    </div>
</section>
