<%- include(`${process.env.PARTIALS}/head/full`) %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <%- include(`${process.env.PARTIALS}/breadcrumb`, {href: '/stores',           text: 'Stores'}) %>
            <%- include(`${process.env.PARTIALS}/breadcrumb`, {href: '/stores/suppliers', text: 'Suppliers'}) %>
            <%- include(`${process.env.PARTIALS}/breadcrumb`) %>
        </ul>
    </nav>
</section>
<section class="container">
    <ul class="nav nav-tabs" id="mainTab" role="tablist">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% if (permissions.supplier_edit) { %>
                    <%- include(`${process.env.PARTIALS}/edit`) %>
                    <form id='defaultForm'>
                        <input class='supplier_id' type="hidden" name='setting[_value]'>
                        <button id='default_button' class="dropdown-item dropdown_button confirm">
                            Make Default
                        </button>
                    </form>
                <% } %>
                <%- include(`${process.env.PARTIALS}/notes/menu_add`) %>
                <% if (permissions.demand_add) { %>
                    <form id='newDemandForm'>
                        <input class='supplier_id' type="hidden" name='supplier_id'>
                        <button class="dropdown-item dropdown_button confirm">
                            New Demand
                        </button>
                    </form>
                <% } %>
                <% if (permissions.receipt_add) { %>
                    <form id='newReceiptForm'>
                        <input class='supplier_id' type="hidden" name='supplier_id'>
                        <button class="dropdown-item dropdown_button confirm">
                            New Receipt
                        </button>
                    </form>
                <% } %>
                <% if (permissions.supplier_delete) { %>
                    <%- include(`${process.env.PARTIALS}/delete`) %>
                <% } %>
            </div>
        </li>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'details',  title: 'Details'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'items',    title: 'Items',    count_id: 'size_count',    permission: 'access_sizes'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'demands',  title: 'Demands',  count_id: 'demand_count',  permission: 'access_demands'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'receipts', title: 'Receipts', count_id: 'receipt_count', permission: 'access_receipts'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'notes',    title: 'Notes',    count_id: 'note_count',    permission: 'access_notes'}) %>
        <%- include(`${process.env.PARTIALS}/reload`) %>
    </ul>
    <div class="tab-content pt-3" id="myTabContent">
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
            <%- include(`${process.env.PARTIALS}/spinner`, {id: 'suppliers'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_name',      title: 'Name'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_address1',  title: 'Address'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_address2',  title: ''}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_address3',  title: ''}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_address4',  title: ''}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_address5',  title: ''}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_telephone', title: 'Telephone'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_email',     title: 'Email'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_account',   title: 'Account',     append: {a: {id: 'account_link', type: 'primary', text: '<i class="fas fa-search"></i>'}}}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_stores',    title: 'RAF Stores'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_default',   title: 'Default Supplier'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_file',      title: 'Demand File', append: {a: {id: 'file_link',    type: 'primary', text: '<i class="fas fa-search"></i>'}}}) %>
            <% if (permissions.file_add) { %>
                <form id="fileForm" encType="multipart/form-data">
                    <input class='supplier_id' type="hidden" name='supplier_id'>
                    <div class="input-group">
                        <div class="custom-file">
                            <label class="custom-file-label" for="file_upload">Choose file</label>
                            <input type="file" class="custom-file-input" name="demandfile" id="file_upload">
                        </div>
                        <div class="input-group-append">
                            <button class="btn btn-success confirm">
                                <i class='fas fa-file-upload'></i>
                            </button>
                        </div>
                    </div>
                </form>
            <% }; %>
        </div>
        <% if (permissions.access_sizes) { %>
            <div class="tab-pane fade" id="items" role="tabpanel" aria-labelledby="items-tab">
                <%- include(`${process.env.PARTIALS}/spinner`, {id: 'sizes'}) %>
                <table class="table table-sm table-hover">
                    <thead class="thead-dark">
                        <th class="w-45" onclick="sortTable(0, 'sizeTable')">Item</th>
                        <th class="w-45" onclick="sortTable(1, 'sizeTable')">Size</th>
                        <th class="w-10" onclick="sortTable(2, 'sizeTable')">Stock</th>
                        <th><i class='fas fa-search'></i></th>
                    </thead>
                    <tbody id="sizeTable">
                    </tbody>
                </table>
            </div>
        <% } %>
        <% if (permissions.access_demands) { %>
            <div class="tab-pane fade" id="demands" role="tabpanel" aria-labelledby="demands-tab">
                <%- include(`${process.env.PARTIALS}/spinner`, {id: 'demands'}) %>
                <%- include(`${process.env.PARTIALS}/inputs/select_include`, {id: 'demandsCompleteSelect', title: 'Completed Demands', selected: 1}) %>
                <%- include(`${process.env.PARTIALS}/inputs/select_include`, {id: 'demandsClosedSelect',   title: 'Closed Demands',    selected: 1}) %>
                <table class="table table-sm table-hover">
                    <thead class="thead-dark">
                        <th class="w-30" onclick="sortTable(0, 'demandTable')">Date</th>
                        <th class="w-10" onclick="sortTable(1, 'demandTable')">Lines</th>
                        <th class="w-10" onclick="sortTable(2, 'demandTable')">Complete</th>
                        <th class="w-10" onclick="sortTable(3, 'demandTable')">Closed</th>
                        <th class="w-30" onclick="sortTable(4, 'demandTable')">User</th>
                        <th><i class="fas fa-search"></i></th>
                    </thead>
                    <tbody id="demandTable">
                    </tbody>
                </table>
            </div>
        <% } %>
        <% if (permissions.access_receipts) { %>
            <div class="tab-pane fade" id="receipts" role="tabpanel" aria-labelledby="receipts-tab">
                <%- include(`${process.env.PARTIALS}/spinner`, {id: 'receipts'}) %>
                <%- include(`${process.env.PARTIALS}/inputs/select_include`, {id: 'receiptsCompleteSelect', title: 'Completed Receipts', selected: 1}) %>
                <table class="table table-sm table-hover">
                    <thead class="thead-dark">
                        <th class="w-40" onclick="sortTable(0, 'receiptTable')">Date</th>
                        <th class="w-10" onclick="sortTable(1, 'receiptTable')">Lines</th>
                        <th class="w-10" onclick="sortTable(2, 'receiptTable')">Complete</th>
                        <th class="w-40" onclick="sortTable(3, 'receiptTable')">User</th>
                        <th><i class="fas fa-search"></i></th>
                    </thead>
                    <tbody id="receiptTable">
                    </tbody>
                </table>
            </div>
        <% } %>
        <%- include(`${process.env.PARTIALS}/notes/tab_body`) %>
    </div>
</section>
<%- include(`${process.env.PARTIALS}/foot/full`) %>
<!-- Get/spinner/XHRsend/send from notes include -->
<script src='/js/add.js'></script>
<script src='/js/show.js'></script>
<script src='/js/edit.js'></script>
<script src='/js/tabs.js'></script>
<script>showTab('<%= tab %>');</script>
<script src='/js/data/addFormListener.js'></script>
<script src='/js/get/settings.js'></script>
<script src='/js/stores/suppliers/show/showSupplier.js'></script>
<script src='/js/stores/suppliers/show/setDefault.js'></script>
<script>
    getSupplier = () => get(showSupplier, {table: 'suppliers', query: ['supplier_id=' + path[3]]});
    document.querySelector('#reload').addEventListener('click', () => getSupplier());
</script>
<script async>getSupplier()</script>
<% if (permissions.access_sizes) { %>
    <script src="/js/suppliers/show/showSizes.js"></script>
    <script>
        getSizes = () => get(showSizes, {table: 'sizes', query: ['supplier_id=' + path[3]]});
        document.querySelector('#reload').addEventListener('click', () => getSizes());
    </script>
    <script async>getSizes()</script>
<% } %>
<% if (permissions.access_demands) { %>
    <script src="/js/suppliers/show/showDemands.js"></script>
    <script>
        getDemands = () => get(showDemands, {table: 'demands', query: demand_query()});
        document.querySelector('#reload').addEventListener('click', () => getDemands());
        let demandsComplete = document.querySelector('#demandsCompleteSelect'),
            demandsClosed   = document.querySelector('#demandsClosedSelect');
        demandsComplete.addEventListener('change', () => getDemands());
        demandsClosed.addEventListener('change', () => getDemands());
    </script>
    <script async>getDemands()</script>
<% } %>
<% if (permissions.access_receipts) { %>
    <script src="/js/suppliers/show/showReceipts.js"></script>
    <script>
        getReceipts = () => get(showReceipts, {table: 'receipts', query: receipt_query()});
        document.querySelector('#reload').addEventListener('click', () => getReceipts());
        let receiptselect = document.querySelector('#receiptsCompleteSelect');
        if (receiptselect) receiptselect.addEventListener('change', () => getReceipts());
    </script>
    <script async>getReceipts()</script>
<% } %>
<script>
    window.addEventListener("load", () => {
        addFormListener(
            'defaultForm',
            'PUT',
            '/stores/settings?_name=default_supplier',
            {
                onComplete: getSettings,
                args: ['default_supplier', setDefault, 'suppliers']
            }
        );
        <% if (permissions.demand_add) { %>
            addFormListener(
                'newDemandForm',
                'POST',
                '/stores/demands',
                {onComplete: getDemands}
            );
        <% } %>
        <% if (permissions.receipt_add) { %>
            addFormListener(
                'newReceiptForm',
                'POST',
                '/stores/receipts',
                {onComplete: getReceipts}
            );
        <% } %>
        <% if (permissions.file_add) { %>
            addFormListener(
                'fileForm',
                'POST',
                '/stores/files',
                {onComplete: getSupplier}
            );
        <% } %>
    });
</script>
<%- include(`${process.env.PARTIALS}/foot/htmlClose`) %>
