<%- include(`${partials}/head/app`) %>
<body>
<%- include(`${partials}/head/flash`) %>
<section id='body'>
    <ul class="nav nav-tabs" id="mainTab" role="tablist">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class='dropdown-item' id='edit_link'>
                    Edit
                </a>
                <%- include(`${partials}/notes/menu_add`) %>
            </div>
        </li>
        <%- include(`${partials}/tab_head`, {id: 'details', title: 'Details'}) %>
        <%- include(`${partials}/tab_head`, {id: 'notes',   title: 'Notes', count_id: 'note', permission: 'access_notes'}) %>
        <%- include(`${partials}/reload`) %>
    </ul>
    <div class="tab-content pt-3" id="myTabContent">
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
            <%- include(`${partials}/spinner`, {id: 'files'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_path',          title: 'File'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_code',          title: 'Account'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_rank',          title: 'Holder Rank'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_name',          title: 'Holder Name'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_sqn',           title: 'Squadron'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_cover_sheet',   title: 'Cover Sheet'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_items_sheet',   title: 'Items Sheet'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_rank_column',   title: 'Rank Column'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_name_column',   title: 'Name Column'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_request_start', title: 'Name Start Row'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_request_end',   title: 'Name End Row'}) %>
            <%- include(`${partials}/inputs/display`, {id: '_date',          title: 'Date'}) %>
        </div>
        <%- include(`${partials}/notes/tab_body`) %>
    </div>
<%- include(`${partials}/foot/app`) %>
<!-- Get/spinner/XHRsend from notes include -->
<script src='/js/edit.js'></script>
<script src='/js/add.js'></script>
<script src='/js/tabs.js'></script>
<script src="/js/stores/files/show/file.js"></script>
<script>getFile = () => get(showFile, {table: 'files', query:[`file_id=${path[3]}`]})
    document.querySelector('#reload').addEventListener('click', () => getFile());
</script>
<script async>getFile()</script>
<script>showTab('<%= tab %>');</script>
<%- include(`${partials}/foot/elements/htmlClose`) %>