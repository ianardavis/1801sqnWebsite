<!-- NOTES NEW PAGE -->
<% include ../../partials/head/full %>
<section class="container page_title">
    <a href="/stores"><h2>Stores Management</h2></a>
    <h3>Edit Note For:</h3>
    <h4><%= note._link_table %></h4>
    <h5><%= note._link_id %></h5>
</section>
<section class="container-fluid p-5">
    <div class="row">
        <div class="col-12 col-lg-6 mx-auto">
            <form action="/stores/notes/<%= note.note_id %>?_method=PUT" method="POST">
                <input type="hidden" name="failRedirect",       value="/stores/<%= note._link_table %>/<%= note._link_id %>" readonly>
                <input type="hidden" name="note[_link_table]"   value="<%= note._link_table %>" readonly>
                <input type="hidden" name="note[_link_id]"      value="<%= note._link_id %>" readonly>
                <input type="hidden" name="note[_system]"       value="<%= note._system %>" readonly>
                <div class="form-group row">
                    <div class="col-12">
                        <textarea class="w-100" name="note[_note]" rows="10" maxlength="1000" required><%= note._note %></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <button class="btn btn-primary btn-lg col-12" type="submit" id="_submit">Save</button>
                </div>
                <div class="form-group row">
                    <a href="/stores/notes/<%= note.note_id %>">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>
<% include ../../partials/foot/full %>
<% include ../../partials/foot/htmlClose %>