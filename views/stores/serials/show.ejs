<%- include('../../partials/head/head') %>
<body>
<%- include('../../partials/head/flash') %>
<section id='body'>
<section class="container">
	<ul class="nav nav-tabs" id="mainTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link" id="details-tab" data-toggle="tab" href="#details" role="tab" aria-controls="details" aria-selected="true">
                Details
            </a>
        </li>
        <% if (permissions.access_notes) { %>
            <li class="nav-item">
                <a class="nav-link" id="notes-tab" data-toggle="tab" href="#notes" role="tab" aria-controls="notes" aria-selected="true">
                    Notes (<span id='note_count'></span>)
                </a>
            </li>
        <% } %>
    </ul>
    <div class="tab-content pt-3" id="myTabContent">
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
            <div class="container">
				<div class="input-group mb-1">
                    <div class="input-group-prepend w-20">
                        <span class="input-group-text w-100">Serial #</span>
                    </div>
					<p class="form-control"><%= serial._serial %></p>
					<div class="input-group-append">
						<a class='btn btn-warning' href='javascript:edit("serials",<%= serial.serial_id %>,{height:151})'>
							<i class='fas fa-pencil-alt'></i>
						</a>
					</div>
                </div>
			</div>
		</div>
        <% include ../../partials/noteTable %>
	</div>
</section>
<% include ../../partials/foot/noNav %>
<script>
    showTab('<%= show_tab %>');
</script>
<% include ../../partials/foot/htmlClose %>
