<%- include(`${partials}/head/app_noNav`) %>
<section class='container'>
    <h1>Select Size...</h1>
    <div id="div_items">
        <%- include(`${partials}/inputs/text`,   {title: 'Filter Items', id: 'filter_items'}) %>
        <%- include(`${partials}/inputs/select`, {title: 'Items',        id: 'sel_items', size: 10}) %>
    </div>
    <div id="div_sizes" class=''>
        <table class='table table-sm table-hover'>
            <thead class='thead-dark'>
                <th class='w-10'><i class="fas fa-check"></i></th>
                <th class='w-25' onclick='sortByRow(this, getItems)' data-sort_col='size1' id='size_text1'><span class='sort_ind float-end'></span></th>
                <th class='w-25' onclick='sortByRow(this, getItems)' data-sort_col='size2' id='size_text2'><span class='sort_ind float-end'></span></th>
                <th class='w-25' onclick='sortByRow(this, getItems)' data-sort_col='size3' id='size_text3'><span class='sort_ind float-end'></span></th>
                <th class='w-15' onclick='sortByRow(this, getItems)' data-sort_col='qty'>Qty<span class='sort_ind float-end'></span></th>
                <!-- <th class='w-10' onclick="sortTable(0,'tbl_sizes')"><i class="fas fa-check"></i></th>
                <th class='w-25' onclick="sortTable(1,'tbl_sizes')"></th>
                <th class='w-25' onclick="sortTable(2,'tbl_sizes')"></th>
                <th class='w-25' onclick="sortTable(3,'tbl_sizes')"></th>
                <th class='w-15' onclick="sortTable(4,'tbl_sizes')">Stock</th> -->
            </thead>
            <tbody id='tbl_sizes'></tbody>
        </table>
        <button id='btn_select' class='btn btn-success w-100 m-1 fixed-bottom'>Select</button>
    </div>
</section>
<%- include(`${partials}/foot/app`) %>
<script src="/js/search/select.js"></script>
<script src="/js/stores/sizes/select/view.js"></script>
<script src="/js/utils/list/items.js"></script>
<script src="/js/utils/list/sizes.js"></script>
<script async>getItems()</script>
<%- include(`${partials}/foot/components/htmlClose`) %>