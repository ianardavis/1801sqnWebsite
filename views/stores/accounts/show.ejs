<% include ../../partials/head/head %>
<body>
<% include ../../partials/head/flash %>
<section id='body'>
    <ul class="nav nav-tabs" id="mainTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link" id="details-tab" data-toggle="tab" href="#details" role="tab" aria-controls="details" aria-selected="true">
                Details
            </a>
        </li>
        <% if (permissions.access_notes) { %>
            <li class="nav-item">
                <a class="nav-link" id="notes-tab" data-toggle="tab" href="#notes" role="tab" aria-controls="notes" aria-selected="true">
                    Notes (<span id='note_count'></span>)
                </a>
            </li>
        <% } %>
        <li class="nav-item dropdown ml-auto">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Options
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class='dropdown-item' href='javascript:edit("accounts",<%= account.account_id %>,{"height":236})'>
                    Edit
                </a>
            </div>
        </li>
    </ul>
    <div class="tab-content pt-3" id="myTabContent">
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
            <%- include('../../partials/inputs/display', {title: 'Name',   text: account._name}) %>
            <%- include('../../partials/inputs/display', {title: 'Number', text: account._number}) %>
            <%- include('../../partials/inputs/display', {title: 'Owner',  text: account.user.rank._rank + ' ' + account.user.full_name}) %>
        </div>
        <% include ../../partials/noteTable %>
    </div>
<% include ../../partials/foot/noNav %>
<% include ../../partials/foot/htmlClose %>