<%- include(`${partials}/head/app`) %>
<body>
<%- include(`${partials}/head/flash`) %>
<section id='body'>
    <form id='accountForm'>
        <%- include(`${partials}/inputs/text`,   {title: 'Name',   name: 'account[_name]',   maxLength: 45,  placeholder: 'Required', required: true}) %>
        <%- include(`${partials}/inputs/text`,   {title: 'Number', name: 'account[_number]', maxLength: 255, placeholder: 'Required', required: true}) %>
        <%- include(`${partials}/spinner`, {id: 'users'}) %>
        <%- include(`${partials}/inputs/select`, {title: 'Owner',  name: 'account[user_id]', id: 'usersSelect', required: true}) %>
        <%- include(`${partials}/save_cancel`) %>
    </form>
<%- include(`${partials}/foot/app`) %>
<script src="/js/addFormListener.js"></script>
<script src="/js/stores/accounts/showUsers.js"></script>
<script async>get(showUsers, {table: 'users', query:['status_id=2']})</script>
<script>
    window.addEventListener( "load", function () {
        addFormListener(
            'account',
            'POST',
            '/stores/accounts',
            {
                onComplete: window.opener.get,
                args: [window.opener.listAccounts, {table: 'accounts', query: []}],
                _close: true
            }
        );
    });
</script>
<%- include(`${partials}/foot/elements/htmlClose`) %>