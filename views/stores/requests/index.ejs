<%- include(`${partials}/head/full`) %>
<section class="mb-2">
	<nav class="navbar navbar-expand navbar-light bg-nav">
		<ul class="navbar-nav mr-auto">
            <%- include(`${partials}/breadcrumb`, {href: '/stores',		  	 text: 'Stores'}) %>
            <%- include(`${partials}/breadcrumb`, {href: '/stores/requests', text: 'Requests'}) %>
			<%- include(`${partials}/reload`) %>
		</ul>
	</nav>
</section>
<div class="container">
	<%- include(`${partials}/inputs/select`, {title: 'Status', id: 'sel_status', options: [{value: '', text: 'All'}, {value: '_status=0', text: 'Cancelled'}, {value: '_status=1', text: 'Draft'}, {value: '_status=2', text: 'Open', selected: true}, {value: '_status=3', text: 'Complete'}]}) %>
	<table class="table table-sm table-hover w-100">
		<thead class="thead-dark">
			<th class="w-40" onclick="sortTable(0, 'tbl_requests')">
				<%- include(`${partials}/spinner`, {id: 'requests', float_left: true, small: true}) %>
				For
			</th>
			<th class="w-35" onclick="sortTable(1, 'tbl_requests')">Date</th>
			<th class="w-10" onclick="sortTable(2, 'tbl_requests')">Lines</th>
			<th class="w-15" onclick="sortTable(3, 'tbl_requests')">Status</th>
			<th><i class='fas fa-search'></i></th>
		</thead>
		<tbody id="tbl_requests">
		</tbody>
	</table>
</div>
<%- include(`${partials}/foot/full`) %>
<script src='/js/stores/requests/index/requests.js'></script>
<script src='/js/spinner.js'></script>
<script src='/js/get.js'></script>
<script src='/js/data/XHRsend.js'></script>
<script src='/js/data/send.js'></script>
<script src='/js/utils/select_sel_status.js'></script>
<script>
	function getRequests() {
		get(
			showRequests,
			{
				table: 'requests',
				query: [sel_status.value]
			}
		);
	};
</script>
<script async>getRequests()</script>
<script>document.querySelector('#reload').addEventListener('click', () => getRequests());</script>	
<script>document.querySelector('#sel_status').addEventListener('click', () => getRequests());</script>	
<%- include(`${partials}/foot/htmlClose`) %>