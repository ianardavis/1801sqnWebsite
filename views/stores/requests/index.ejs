<% include ../../partials/head/full %>
<section class="mb-2">
	<nav class="navbar navbar-expand navbar-light bg-nav">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores">Stores</a>
			</li>
			<li class="nav-item">
				<a class="nav-link stores_nav" href="/stores/requests">Requests</a>
			</li>
		</ul>
	</nav>
</section>
<section>
	<div class="container">
		<div class="input-group mb-2">
			<div class="input-group-prepend w-25">
				<label class="input-group-text text-centre w-100" for="sel_complete">Completed Requests</label>
			</div>
			<select class="custom-select" id='sel_complete' onchange=getRequests()>
				<option value='1'>Include</option>
				<option value='2'>Exclude</option>
				<option value='3' selected>Only</option>
			</select>
		</div>
		<div class="input-group mb-2">
			<div class="input-group-prepend w-25">
				<label class="input-group-text text-centre w-100" for="sel_closed">Closed Requests</label>
			</div>
			<select class="custom-select" id='sel_closed' onchange=getRequests()>
				<option value='1'>Include</option>
				<option value='2' selected>Exclude</option>
				<option value='3'>Only</option>
			</select>
		</div>
		<div id='spn_requests' class="spinner-border text-primary" role="status">
			<span class="sr-only">Loading...</span>
		</div>
		<table class="table table-sm table-hover mx-auto w-100">
			<thead class="thead-dark">
				<th class="w-35" onclick="sortTable(0, 'requestTable')">For</th>
				<th class="w-35" onclick="sortTable(1, 'requestTable')">Date</th>
				<th class="w-10" onclick="sortTable(2, 'requestTable')">Lines</th>
				<th class="w-10">Complete</th>
				<th class="w-10">Closed</th>
				<th><i class='fas fa-search'></i></th>
			</thead>
			<tbody id="requestTable">
			</tbody>
		</table>
	</div>
</section>
<% include ../../partials/foot/full %>
<script src='/js/specific/requests_index.js'></script>
<script async>getRequests()</script>
<% include ../../partials/foot/htmlClose %>