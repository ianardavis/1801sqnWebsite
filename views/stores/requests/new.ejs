<% include ../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/users">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/users/<%= user.user_id %>"><%= user.rank._rank %> <%= user._name %>, <%= user._ini %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/requests/new?user=<%= user.user_id %>">New Request</a>
            </li>
        </ul>
    </nav>
</section>
<section>
	<div class="container">
		<form id="requestForm" action="/stores/requests" method="POST" onsubmit="return confirm('Confirm new request?');">
			<input type="hidden" name="requested_for" value="<%= user.user_id %>">
            <div>
                <input class="btn btn-success mb-2" type="submit" value="Request Selected Items">
            </div>
			<div class="row mx-auto">
				<div class="col-12 col-md-6 bordered mx-auto mb-3">
					<h5>Selected Items</h5>
					<p class="btn btn-primary mb-3 w-100" onclick='openAddItem("request")'>Add Item</p>
					<div id="selectedItems">
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
