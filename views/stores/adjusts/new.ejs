<!-- USER ITEM PAGE -->
<% include ../../partials/head/full %>
<section class="mb-2">
    <nav class="navbar navbar-expand navbar-light bg-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores">Stores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/items">Items</a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/items/<%= location.size.item.item_id %>"><%= location.size.item._description %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/item_sizes/<%= location.stock_id %>">Size: <%= location.size.size._text %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link stores_nav" href="/stores/adjusts/new?si=<%= location.stock_id %>&at=<%= query.at %>"><%= query.at %></a>
            </li>
        </ul>
    </nav>
</section>
<nav class="navbar navbar-expand navbar-dark bg-dark stores">
	<ul class="navbar-nav mr-auto">
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				Options
			</a>
			<div class="dropdown-menu" aria-labelledby="navbarDropdown">
				<a class="dropdown-item" href="/stores/items_sizes/<%= location.stock_id %>">Back to <%= location.size.item._description %>/Size: <%= location.size.size._text %></a>
			</div>
		</li>
	</ul>
</nav>
<section class="detailBox container-fluid pt-3">
	<div class="row">
		<div class="col-12 col-lg-3 mx-auto mb-3">
			<div class="container bordered">
                <h4><%= query.at %></h4>
                <form action="/stores/adjusts" method="POST">
					<div class="">
						<input type="hidden" name="adjust[_adjust_type]" value="<%= query.at %>" readonly>
						<input type="hidden" name="adjust[location_id]" value="<%= location.stock_id %>" readonly>
						<p><input type="text" name="adjust[_qty]" inputmode="numeric" maxlength="11" placeholder="Quantity" required></p>
					</div>
					<p><button class="btn btn-success">Save</button></p>
				</form>
            </div>
		</div>
    </div>
</section>
<% include ../../partials/foot/full %>
<% include ../../partials/foot/htmlClose %>