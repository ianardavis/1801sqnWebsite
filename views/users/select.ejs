<%- include(`${partials}/head/app_noNav`) %>
<section class='container'>
    <h1>Select User...</h1>
    <div id="div_filters">
        <%- include(`${partials}/inputs/select`, {id: 'sel_ranks',    title: 'Rank',   spinner_id: 'ranks',    reload_id: 'reload_ranks'}) %>
        <%- include(`${partials}/inputs/select`, {id: 'sel_statuses', title: 'Status', spinner_id: 'statuses', reload_id: 'reload_statuses'}) %>
    </div>
    <div id="div_users">
        <table class='table table-sm table-hover'>
            <thead class='thead-dark'>
                <th class='w-20'><i class="fas fa-check"></i></th>
                <th class='w-20' onclick='sortByRow(this, getUsers)' data-sort_col='service_number'>Bader/Service #<span class='sort_ind float-end'></span></th>
                <th class='w-10' onclick='sortByRow(this, getUsers)' data-sort_col='rank_id'	   >Rank		   <span class='sort_ind float-end'></span></th>
                <th class='w-40' onclick='sortByRow(this, getUsers)' data-sort_col='surname'	   >Surname		   <span class='sort_ind float-end'></span></th>
                <th class='w-30' onclick='sortByRow(this, getUsers)' data-sort_col='first_name'	   >First Name	   <span class='sort_ind float-end'></span></th>
            </thead>
            <tbody id='tbl_users'></tbody>
        </table>
        <button id='btn_select' class='btn btn-success w-100 m-1 fixed-bottom'>Select Users</button>
    </div>
</section>
<%- include(`${partials}/foot/app`) %>
<script src="/js/utils/list/ranks.js"></script>
<script src="/js/utils/list/statuses.js"></script>
<script src="/js/users/select/view.js"></script>
<%- include(`${partials}/foot/components/htmlClose`) %>