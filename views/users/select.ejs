<%- include(`${partials}/head/noNav`) %>
<h1>Select User...</h1>
<div id="div_filters">
    <%- include(`${partials}/inputs/select`, {id: 'sel_ranks',    title: 'Rank',   multiple: true}) %>
    <%- include(`${partials}/inputs/select`, {id: 'sel_statuses', title: 'Status', multiple: true}) %>
</div>
<div id="div_users">
    <table class='table table-sm table-hover'>
        <thead class='thead-dark' id="tbl_users_head">
            <th class='w-10'><i class="fas fa-check"></i></th>
            <th class='w-20' data-column='["service_number"]'>Bader/Service #</th>
            <th class='w-10' data-column='["rank","rank"]'>Rank</th>
            <th class='w-30' data-column='["surname"]' data-dir="ASC">Surname</th>
            <th class='w-30' data-column='["first_name"]'>First Name</th>
        </thead>
        <tbody id='tbl_users'></tbody>
    </table>
    <button id='btn_select' class='btn btn-success w-100 m-1 fixed-bottom'>Select Users</button>
</div>
<%- include(`${partials}/foot/app`) %>
<script src="/js/utils/list/ranks.js"></script>
<script src="/js/utils/list/statuses.js"></script>
<script src="/js/users/select/view.js"></script>
<%- include(`${partials}/foot/components/htmlClose`) %>