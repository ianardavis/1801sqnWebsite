<%- include(`${partials}/head/app`, {text: 'Canteen'}) %>
<%- include(`${partials}/breadcrumb`, {text: 'Movements'}) %>
<%- include(`${partials}/reload`) %>
<%- include(`${partials}/spinner`, {id: 'movements'}) %>
<%- include(`${partials}/head/components/close`) %>
<section class='container'>
    <table class="table table-sm table-hover">
        <thead class="thead-dark">
            <th class='w-30' onclick='sortByRow(this, getMovements)' data-sort_col='holding_id_from'>From<span class='sort_ind float-end'></span></th>
            <th class='w-30' onclick='sortByRow(this, getMovements)' data-sort_col='holding_id_to'  >To<span class='sort_ind float-end'></span></th>
            <th class='w-30' onclick='sortByRow(this, getMovements)' data-sort_col='description'    >Description<span class='sort_ind float-end'></span></th>
            <th class='w-10' onclick='sortByRow(this, getMovements)' data-sort_col='amount'         >Amount<span class='sort_ind float-end'></span></th>
            <th><i class='fas fa-search'></i></th>
        </thead>
        <tbody id="tbl_movements"></tbody>
    </table>
</section>
<%- include(`${partials}/foot/app`) %>
