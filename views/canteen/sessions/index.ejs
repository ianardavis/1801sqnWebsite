<%- include(`${partials}/head/app`) %>
<%- include(`${partials}/breadcrumb`, {href: '/canteen',	      text: 'Canteen'}) %>
<%- include(`${partials}/breadcrumb`, {href: '/canteen/sessions', text: 'Sessions'}) %>
<% if (permissions.session_add) { %>
    <%- include(`${partials}/breadcrumb`, {html: '<i class="fas fa-plus"></i>', id: 'btn_add_session'}) %>
<% } %>
<%- include(`${partials}/reload`) %>
<%- include(`${partials}/spinner`, {id: 'sessions'}) %>
<%- include(`${partials}/head/navbar/close`) %>
<section class='container'>
    <table class="table table-sm table-hover">
        <thead class="thead-dark">
            <th class="w-40" onclick="sortTable(0, 'tbl_sessions')">Start</th>
            <th class="w-40" onclick="sortTable(1, 'tbl_sessions')">End</th>
            <th class="w-20" onclick="sortTable(2, 'tbl_sessions')">Status</th>
            <th><i class='fas fa-search'></i></th>
        </thead>
        <tbody id="tbl_sessions"></tbody>
    </table>
    <% if (permissions.session_add) { %>
        <div id='mdl_add_session' class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <form class="modal-content" id='form_add_session'>
                    <div class="modal-header">
                        <h5 class="modal-title">Open Session</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <% [{text: '1p',  name: 'c0001', step: '0.01'},{text: '2p',  name: 'c0002', step: '0.02'},{text: '5p',  name: 'c0005', step: '0.05'},{text: '10p', name: 'c0010', step: '0.1'},{text: '20p', name: 'c0020', step: '0.2'},{text: '50p', name: 'c0050', step: '0.5'},{text: '£1',  name: 'c0100', step: '1'},{text: '£2',  name: 'c0200', step: '2'},{text: '£5',  name: 'c0500', step: '5'},{text: '£10', name: 'c1000', step: '10'},{text: '£20', name: 'c2000', step: '20'},{text: '£50', name: 'c5000', step: '50'}].forEach(e => { %>
                            <div class="input-group mb-1">
                                <div class="input-group-prepend w-30">
                                    <span class="input-group-text w-100"><%= e.text %></span>
                                </div>
                                <input
                                    class="form-control"
                                    type="number"
                                    inputMode='numeric'
                                    name='balance[<%= e.name %>][b]'
                                    step='<%= e.step %>'
                                    min='0'
                                    placeholder="Bagged"
                                >
                                <input
                                    class="form-control"
                                    type="number"
                                    inputMode='numeric'
                                    name='balance[<%= e.name %>][l]'
                                    step='<%= e.step %>'
                                    min='0'
                                    placeholder="Loose"
                                >
                            </div>
                        <% }) %>
                        <div class="input-group mb-1">
                            <div class="input-group-prepend w-30">
                                <span class="input-group-text w-100">Cheques</span>
                            </div>
                            <input
                                class="form-control"
                                type="number"
                                inputMode='numeric'
                                name='balance[cheques][b]'
                                step='0.01'
                                min='0'
                                placeholder="Bagged"
                            >
                            <input
                                class="form-control"
                                type="number"
                                inputMode='numeric'
                                name='balance[cheques][l]'
                                step='0.01'
                                min='0'
                                placeholder="Loose"
                            >
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-success w-100" value='Open'>
                    </div>
                </form>
            </div>
        </div>
    <% } %>
</section>
<%- include(`${partials}/foot/app`) %>
<script src='/js/addFormListener.js'></script>
<script src='/js/canteen/sessions/index/getSessions.js'></script>
<script async>getSessions()</script>
<% if (permissions.session_add) { %>
    <script>
        let btn_add_session = document.querySelector('#btn_add_session');
        if (btn_add_session) btn_add_session.addEventListener('click', function (){$('#mdl_add_session').modal('show')});
        addFormListener(
            'add_session',
            'POST',
            `/canteen/sessions`,
            {onComplete: [getSessions, function () {$('#mdl_add_session').modal('hide')}]}
        );
    </script>
<% } %>
<%- include(`${partials}/foot/elements/htmlClose`) %>