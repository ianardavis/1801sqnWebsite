<%- include(`${partials}/head/app`) %>
<%- include(`${partials}/breadcrumb`, {href: '/canteen',	      text: 'Canteen'}) %>
<%- include(`${partials}/breadcrumb`, {href: '/canteen/receipts', text: 'Receipts'}) %>
<% if (permissions.receipt_add) { %>
    <li class="nav-item">
        <form id='form_add_receipt'>
            <button class="nav-link confirm">
                <i class="fas fa-plus"></i>
            </button>
        </form>
    </li>
<% } %>
<%- include(`${partials}/reload`) %>
<%- include(`${partials}/spinner`, {id: 'receipts'}) %>
<%- include(`${partials}/head/navbar/close`) %>
<section class='container'>
    <%- include(`${partials}/inputs/select`, {title: 'Complete Receipts', id: 'sel_status', options: [{value:'', text: 'Include'},{value:'_status=1', text: 'Exclude', selected: true},{value:'_status=2', text: 'Only'}]}) %>
    <table class="table table-sm table-hover">
        <thead class="thead-dark">
            <th class="w-40" onclick="sortTable(0, 'tbl_receipts')">Date</th>
            <th class="w-40" onclick="sortTable(1, 'tbl_receipts')">User</th>
            <th class="w-20" onclick="sortTable(2, 'tbl_receipts')">Status</th>
            <th><i class='fas fa-search'></i></th>
        </thead>
        <tbody id="tbl_receipts"></tbody>
    </table>
</section>
<%- include(`${partials}/foot/app`) %>
<script src="/js/canteen/receipts/index/getReceipts.js"></script>
<script src="/js/addFormListener.js"></script>
<script async>getReceipts()</script>
<% if (permissions.receipt_add) { %>
    <script>
        window.addEventListener('load', function () {
            addFormListener(
                'add_receipt',
                'POST',
                '/canteen/receipts',
                {onComplete: getReceipts}
            )
        });
    </script>
<% } %>
<%- include(`${partials}/foot/elements/htmlClose`) %>