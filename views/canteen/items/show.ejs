<%- include(`${process.env.PARTIALS}/head/full`) %>
<section class='mb-2'>
    <nav class='navbar navbar-expand navbar-light bg-nav'>
        <ul class='navbar-nav mr-auto'>
            <%- include(`${process.env.PARTIALS}/breadcrumb`, {href: '/canteen',	   text: 'Canteen'}) %>
            <%- include(`${process.env.PARTIALS}/breadcrumb`, {href: '/canteen/items', text: 'Items'}) %>
            <%- include(`${process.env.PARTIALS}/breadcrumb`) %>
			<%- include(`${process.env.PARTIALS}/reload`) %>
			<%- include(`${process.env.PARTIALS}/spinner`, {id: 'items'}) %>
        </ul>
    </nav>
</section>
<section class='container'>
    <ul class="nav nav-tabs" id="mainTab" role="tablist">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% if (permissions.item_edit) { %>
                    <%- include(`${process.env.PARTIALS}/edit`) %>
                <% } %>
                <%- include(`${process.env.PARTIALS}/notes/menu_add`) %>
                <% if (permissions.item_delete) { %>
                    <%- include(`${process.env.PARTIALS}/delete`) %>
                <% } %>
            </div>
        </li>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'details',   title: 'Details'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'receipts',  title: 'Receipts', count_id: 'receipt_count',  permission: 'access_receipts'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'writeoffs', title: 'Writeoff', count_id: 'writeoff_count', permission: 'access_writeoffs'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'sales',     title: 'Sales',    count_id: 'sale_count',     permission: 'access_sales'}) %>
        <%- include(`${process.env.PARTIALS}/tab_head`, {id: 'notes',     title: 'Notes',    count_id: 'note_count',     permission: 'access_notes'}) %>
    </ul>
    <div class="tab-content pt-3" id="myTabContent">
        <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_name',    title: 'Name'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_price',   title: 'Price'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_cost',    title: 'Cost'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_qty',     title: 'Stock'}) %>
            <%- include(`${process.env.PARTIALS}/inputs/display`, {id: '_current', title: 'Current Item'}) %>
        </div>
        <% if (permissions.access_receipts) { %>
            <div class="tab-pane fade" id="receipts" role="tabpanel" aria-labelledby="receipts-tab">
                <table class="table table-sm table-hover">
                    <thead class="thead-dark">
                        <th class="w-80" onclick="sortTable(0, 'tbl_receipts')">Date</th>
                        <th class="w-20" onclick="sortTable(1, 'tbl_receipts')">Qty</th>
                        <th><i class='fas fa-search'></i></th>
                    </thead>
                    <tbody id="tbl_receipts"></tbody>
                </table>
            </div>
        <% } %>
        <% if (permissions.access_writeoffs) { %>
            <div class="tab-pane fade" id="writeoffs" role="tabpanel" aria-labelledby="writeoffs-tab">
                <table class="table table-sm table-hover">
                    <thead class="thead-dark">
                            <th class="w-80" onclick="sortTable(0, 'tbl_writeoffs')">Date</th>
                        <th class="w-20" onclick="sortTable(1, 'tbl_writeoffs')">Qty</th>
                        <th><i class='fas fa-search'></i></th>
                    </thead>
                    <tbody id="tbl_writeoffs"></tbody>
                </table>
            </div>
        <% } %>
        <% if (permissions.access_sales) { %>
            <div class="tab-pane fade" id="sales" role="tabpanel" aria-labelledby="sales-tab">
                <table class="table table-sm table-hover">
                    <thead class="thead-dark">
                        <th class="w-80" onclick="sortTable(0, 'tbl_sales')">Date</th>
                        <th class="w-20" onclick="sortTable(1, 'tbl_sales')">Qty</th>
                        <th><i class='fas fa-search'></i></th>
                    </thead>
                    <tbody id="tbl_sales"></tbody>
                </table>
            </div>
        <% } %>
        <%- include(`${process.env.PARTIALS}/notes/tab_body`) %>
    </div>
    <div id="div_modals"></div>
</section>
<%- include(`${process.env.PARTIALS}/foot/full`) %>
<script src='/js/tabs.js'></script>
<script src="/js/data/addFormListener.js"></script>
<script src="/js/data/send.js"></script>
<script>showTab('<%= tab %>');</script>
<script src='/js/canteen/items/show/item.js'></script>
<script>
    function getItem() {
        get(
            showItem,
            {
                db: 'canteen',
                table: 'items',
                query: [`item_id=${path[3]}`],
                permissions: {
                    edit: <%= permissions.item_edit || false %>
                }
            }
        )
    };
    document.querySelector('#reload').addEventListener('click', getItem);
</script>
<script async>getItem()</script>
<% if (permissions.access_receipts) { %>
    <script src='/js/canteen/items/show/receipts.js'></script>
    <script>
        function getReceipts() {
            get(
                showReceipts,
                {
                    db: 'canteen',
                    table: 'receipt_lines',
                    query: [`item_id=${path[3]}`]
                }
            )
        };
        document.querySelector('#reload').addEventListener('click', getReceipts);
    </script>
    <script async>getReceipts()</script>
<% } %>
<% if (permissions.access_writeoffs) { %>
    <script src='/js/canteen/items/show/writeoffs.js'></script>
    <script>
        function getWriteoffs() {
            get(
                showWriteoffs,
                {
                    db: 'canteen',
                    table: 'writeoff_lines',
                    query: [`item_id=${path[3]}`]
                }
            )
        };
        document.querySelector('#reload').addEventListener('click', getWriteoffs);
    </script>
    <script async>getWriteoffs()</script>
<% } %>
<% if (permissions.access_sales) { %>
    <script src='/js/canteen/items/show/sales.js'></script>
    <script>
        function getSales() {
            get(
                showSales,
                {
                    db: 'canteen',
                    table: 'sale_lines',
                    query: [`item_id=${path[3]}`]
                }
            )
        };
        document.querySelector('#reload').addEventListener('click', getSales);
    </script>
    <script async>getSales()</script>
<% } %>
<%- include(`${process.env.PARTIALS}/foot/htmlClose`) %>